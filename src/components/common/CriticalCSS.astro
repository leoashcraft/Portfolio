---
/**
 * Critical CSS for above-the-fold content (header + hero)
 * This is inlined in the <head> to eliminate render-blocking CSS for initial paint
 */
---

<style is:inline>
  /* Critical CSS Variables */
  :root {
    --color-night-900: #0a0a0f;
    --color-neon-cyan: #00fff7;
    --color-neon-purple: #6600ff;
    --color-neon-pink: #ff00ff;
    --color-neon-green: #00ff00;
    --color-neon-yellow: #ffff00;
    --color-neon-orange: #ff6600;
    --font-mono: 'JetBrains Mono', 'Fira Code', monospace;
    --font-sans: 'Inter', system-ui, sans-serif;
  }

  /* Critical Base Styles */
  *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
  html { scroll-behavior: smooth; }
  body {
    background-color: #0a0015;
    color: #f3f4f6;
    font-family: var(--font-sans);
    -webkit-font-smoothing: antialiased;
    min-height: 100vh;
    background-image:
      radial-gradient(ellipse at top left, rgba(255, 0, 255, 0.05) 0%, transparent 40%),
      radial-gradient(ellipse at top right, rgba(102, 0, 255, 0.05) 0%, transparent 40%);
  }

  /* Skip Link */
  .skip-link {
    position: absolute;
    top: -2.5rem;
    left: 1rem;
    z-index: 9999;
    background-color: #00fff7;
    color: #0a0a0f;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-weight: 500;
    text-decoration: none;
  }
  .skip-link:focus { top: 1rem; }

  /* Glass Effect */
  .glass {
    background-color: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
  }

  /* Gradient Text */
  .gradient-text-animated {
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    background-size: 300% 300%;
    background-image: linear-gradient(135deg, #ff00ff, #ffff00, #ff6600, #00ff00, #6600ff, #ff00ff);
    animation: gradient 8s ease infinite;
  }
  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  /* Glow Text */
  .glow-text-pink {
    text-shadow: 0 0 20px rgba(255, 0, 255, 0.5), 0 0 40px rgba(255, 0, 255, 0.3);
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 0.75rem;
    font-weight: 500;
    transition: all 0.3s ease;
    text-decoration: none;
  }
  .btn-primary {
    background: linear-gradient(135deg, #ff00ff, #6600ff);
    color: #ffffff;
    border: none;
  }
  .btn-secondary {
    background-color: rgba(10, 0, 21, 0.8);
    color: #f3f4f6;
    border: 1px solid rgba(255, 0, 255, 0.3);
  }

  /* fadeInUp Animation */
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Critical Tailwind Utilities for Header + Hero */
  .fixed { position: fixed; }
  .absolute { position: absolute; }
  .relative { position: relative; }
  .inset-0 { inset: 0; }
  .top-0 { top: 0; }
  .left-0 { left: 0; }
  .right-0 { right: 0; }
  .bottom-8 { bottom: 2rem; }
  .left-1\/2 { left: 50%; }
  .-translate-x-1\/2 { transform: translateX(-50%); }
  .z-10 { z-index: 10; }
  .z-50 { z-index: 50; }
  .-z-10 { z-index: -10; }
  .flex { display: flex; }
  .hidden { display: none; }
  .grid { display: grid; }
  .items-center { align-items: center; }
  .justify-center { justify-content: center; }
  .justify-between { justify-content: space-between; }
  .flex-col { flex-direction: column; }
  .gap-1 { gap: 0.25rem; }
  .gap-2 { gap: 0.5rem; }
  .gap-3 { gap: 0.75rem; }
  .gap-4 { gap: 1rem; }
  .gap-6 { gap: 1.5rem; }
  .grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
  .min-h-screen { min-height: 100vh; }
  .max-w-4xl { max-width: 56rem; }
  .max-w-7xl { max-width: 80rem; }
  .max-w-2xl { max-width: 42rem; }
  .w-5 { width: 1.25rem; }
  .w-6 { width: 1.5rem; }
  .w-10 { width: 2.5rem; }
  .w-full { width: 100%; }
  .h-2 { height: 0.5rem; }
  .h-5 { height: 1.25rem; }
  .h-6 { height: 1.5rem; }
  .h-10 { height: 2.5rem; }
  .h-auto { height: auto; }
  .mx-auto { margin-left: auto; margin-right: auto; }
  .mb-4 { margin-bottom: 1rem; }
  .mb-6 { margin-bottom: 1.5rem; }
  .mb-8 { margin-bottom: 2rem; }
  .mt-1 { margin-top: 0.25rem; }
  .mt-16 { margin-top: 4rem; }
  .px-4 { padding-left: 1rem; padding-right: 1rem; }
  .py-2 { padding-top: 0.5rem; padding-bottom: 0.5rem; }
  .py-3 { padding-top: 0.75rem; padding-bottom: 0.75rem; }
  .py-4 { padding-top: 1rem; padding-bottom: 1rem; }
  .p-8 { padding: 2rem; }
  .pt-2 { padding-top: 0.5rem; }
  .pt-20 { padding-top: 5rem; }
  .text-center { text-align: center; }
  .text-xs { font-size: 0.75rem; line-height: 1rem; }
  .text-sm { font-size: 0.875rem; line-height: 1.25rem; }
  .text-lg { font-size: 1.125rem; line-height: 1.75rem; }
  .text-xl { font-size: 1.25rem; line-height: 1.75rem; }
  .text-3xl { font-size: 1.875rem; line-height: 2.25rem; }
  .text-4xl { font-size: 2.25rem; line-height: 2.5rem; }
  .font-bold { font-weight: 700; }
  .font-semibold { font-weight: 600; }
  .font-medium { font-weight: 500; }
  .font-mono { font-family: var(--font-mono); }
  .text-white { color: #ffffff; }
  .text-gray-300 { color: #d1d5db; }
  .text-gray-400 { color: #9ca3af; }
  .text-neon-pink { color: #ff00ff; }
  .text-neon-cyan { color: #00fff7; }
  .rounded-lg { border-radius: 0.5rem; }
  .rounded-xl { border-radius: 0.75rem; }
  .rounded-2xl { border-radius: 1rem; }
  .rounded-full { border-radius: 9999px; }
  .border-2 { border-width: 2px; }
  .border-current { border-color: currentColor; }
  .bg-gradient-to-br { background-image: linear-gradient(to bottom right, var(--tw-gradient-stops)); }
  .bg-gradient-to-b { background-image: linear-gradient(to bottom, var(--tw-gradient-stops)); }
  .from-neon-pink { --tw-gradient-from: #ff00ff; --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to, transparent); }
  .to-neon-purple { --tw-gradient-to: #6600ff; }
  .from-night-900\/50 { --tw-gradient-from: rgba(10, 10, 15, 0.5); --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to, transparent); }
  .via-transparent { --tw-gradient-stops: var(--tw-gradient-from), transparent, var(--tw-gradient-to, transparent); }
  .to-night-900 { --tw-gradient-to: #0a0a0f; }
  .opacity-0 { opacity: 0; }
  .opacity-60 { opacity: 0.6; }
  .overflow-hidden { overflow: hidden; }
  .backdrop-blur-sm { backdrop-filter: blur(4px); -webkit-backdrop-filter: blur(4px); }
  .transition-colors { transition-property: color, background-color, border-color; transition-duration: 150ms; }
  .transition-all { transition-property: all; transition-duration: 150ms; }
  .animate-bounce { animation: bounce 1s infinite; }
  @keyframes bounce {
    0%, 100% { transform: translateY(-25%); animation-timing-function: cubic-bezier(0.8,0,1,1); }
    50% { transform: translateY(0); animation-timing-function: cubic-bezier(0,0,0.2,1); }
  }

  /* Hero Mobile Background */
  .hero-static-bg .bg-fuchsia-600\/30 { background-color: rgba(192, 38, 211, 0.3); }
  .hero-static-bg .bg-purple-500\/20 { background-color: rgba(168, 85, 247, 0.2); }
  .hero-static-bg .bg-yellow-400\/20 { background-color: rgba(250, 204, 21, 0.2); }
  .hero-static-bg .bg-green-400\/25 { background-color: rgba(74, 222, 128, 0.25); }
  .blur-3xl { filter: blur(64px); }
  .blur-2xl { filter: blur(40px); }
  .w-32 { width: 8rem; }
  .w-48 { width: 12rem; }
  .w-64 { width: 16rem; }
  .w-96 { width: 24rem; }
  .h-32 { height: 8rem; }
  .h-48 { height: 12rem; }
  .h-64 { height: 16rem; }
  .h-96 { height: 24rem; }
  .top-1\/4 { top: 25%; }
  .top-1\/3 { top: 33.333%; }
  .top-1\/2 { top: 50%; }
  .bottom-1\/4 { bottom: 25%; }
  .left-1\/4 { left: 25%; }
  .left-1\/2 { left: 50%; }
  .right-1\/4 { right: 25%; }
  .right-1\/3 { right: 33.333%; }
  .from-\[\#0a0015\] { --tw-gradient-from: #0a0015; --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to, transparent); }
  .via-\[\#1a0a2a\] { --tw-gradient-stops: var(--tw-gradient-from), #1a0a2a, var(--tw-gradient-to, transparent); }
  .to-\[\#0a0015\] { --tw-gradient-to: #0a0015; }
  .bg-black\/\[0\.01\] { background-color: rgba(0, 0, 0, 0.01); }

  /* Responsive */
  @media (min-width: 640px) {
    .sm\:block { display: block; }
    .sm\:flex-row { flex-direction: row; }
    .sm\:text-5xl { font-size: 3rem; line-height: 1; }
    .sm\:text-2xl { font-size: 1.5rem; line-height: 2rem; }
  }
  @media (min-width: 768px) {
    .md\:hidden { display: none; }
    .md\:flex { display: flex; }
    .md\:block { display: block; }
    .md\:grid-cols-4 { grid-template-columns: repeat(4, minmax(0, 1fr)); }
    .md\:px-8 { padding-left: 2rem; padding-right: 2rem; }
    .md\:p-12 { padding: 3rem; }
    .md\:text-base { font-size: 1rem; line-height: 1.5rem; }
    .md\:text-xl { font-size: 1.25rem; line-height: 1.75rem; }
    .md\:text-3xl { font-size: 1.875rem; line-height: 2.25rem; }
    .md\:text-4xl { font-size: 2.25rem; line-height: 2.5rem; }
    .md\:text-6xl { font-size: 3.75rem; line-height: 1; }
  }
  @media (min-width: 1024px) {
    .lg\:text-7xl { font-size: 4.5rem; line-height: 1; }
  }

  /* Mobile performance - disable animations */
  @media (max-width: 767px) {
    .gradient-text-animated {
      animation: none !important;
      background-size: 100% 100% !important;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    *, *::before, *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>
