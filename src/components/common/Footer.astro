---
import { profile } from '../../data/profile';
import { site } from '../../data/site';
import SocialIcons from './SocialIcons.astro';

const currentYear = new Date().getFullYear();
---

<footer class="py-12 px-4 border-t border-neon-pink/20 bg-gradient-to-b from-transparent to-[rgba(10,0,21,0.5)]">
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <!-- Logo and Copyright -->
      <div class="flex items-center gap-4">
        <div
          class="w-10 h-10 rounded-full bg-gradient-to-br from-neon-pink to-neon-purple flex items-center justify-center text-white font-bold text-lg"
          style="box-shadow: 0 0 15px rgba(255, 0, 255, 0.4);"
        >
          LA
        </div>
        <div>
          <p class="text-gray-400 text-sm">
            &copy; {currentYear} {profile.name}. All rights reserved.
          </p>
          <p class="text-gray-500 text-xs">
            {site.footer.tagline}
          </p>
        </div>
      </div>

      <!-- Social Links -->
      <SocialIcons variant="minimal" size="lg" />
    </div>

    <!-- Back to top -->
    <div class="mt-8 text-center">
      <a
        href="#home"
        class="inline-flex items-center gap-2 text-gray-500 hover:text-neon-pink transition-colors text-sm p-3 -m-3"
        aria-label="Back to top"
      >
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
        </svg>
        Back to top
      </a>
    </div>
  </div>
</footer>
