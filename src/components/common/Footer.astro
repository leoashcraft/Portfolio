<script>
  // Footer slide up animation
  let footerCleanup: (() => void) | undefined;

  function initFooterAnimation() {
    const footer = document.querySelector('.footer-content') as HTMLElement;

    if (!footer) return () => {};

    // Skip if animations disabled
    if (document.documentElement.getAttribute('data-animations') === 'disabled') {
      footer.classList.add('visible');
      return () => {};
    }

    let ticking = false;

    const checkFooter = () => {
      const viewportHeight = window.innerHeight;
      const triggerPoint = viewportHeight * 0.9;
      const exitPoint = viewportHeight * 0.95;

      const footerRect = footer.getBoundingClientRect();

      if (footerRect.top < triggerPoint) {
        footer.classList.add('visible');
      }

      if (footerRect.top > exitPoint) {
        footer.classList.remove('visible');
      }

      ticking = false;
    };

    const handleScroll = () => {
      if (!ticking) {
        requestAnimationFrame(checkFooter);
        ticking = true;
      }
    };

    window.addEventListener('scroll', handleScroll, { passive: true });
    checkFooter();

    return () => {
      window.removeEventListener('scroll', handleScroll);
    };
  }

  function initFooter() {
    footerCleanup?.();
    footerCleanup = initFooterAnimation();
  }

  initFooter();
  document.addEventListener('astro:after-swap', initFooter);

  window.addEventListener('animations-change', () => {
    footerCleanup?.();
    footerCleanup = initFooterAnimation();
  });
</script>

<style>
  /* Footer slides up from bottom */
  .footer-content {
    opacity: 0;
    transform: translateY(50px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .footer-content.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Disable animations when preference set */
  [data-animations="disabled"] .footer-content {
    opacity: 1 !important;
    transform: none !important;
    transition: none !important;
  }
</style>
