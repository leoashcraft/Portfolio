---
import { navItems } from '../../data/navigation';
import { profile } from '../../data/profile';
import { getMailtoLink } from '../../lib/contact';
import ThemeToggle from './ThemeToggle.astro';

const mailtoLink = getMailtoLink(profile);
---

<header class="fixed top-0 left-0 right-0 z-50 px-4 py-4 md:px-8">
  <nav id="main-nav" class="glass max-w-7xl mx-auto px-4 py-2 flex flex-wrap items-center justify-between transition-all duration-300 relative">
    <!-- Heat sensor glow effect - pink to purple left to right -->
    <div id="nav-heat-glow" class="pointer-events-none absolute w-96 h-40 rounded-full opacity-0 transition-opacity duration-200" style="background: linear-gradient(to right, rgba(255, 0, 255, 0.15), rgba(102, 0, 255, 0.15)); transform: translate(-50%, -50%); filter: blur(30px);"></div>

    <!-- Left Side: Navigation Links -->
    <div class="flex items-center gap-1">
      <!-- Desktop/Tablet Navigation (visible above 680px) -->
      <ul id="nav-links-inline" class="nav-links-inline hidden items-center gap-1">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="px-4 py-2 rounded-lg text-gray-300 hover:text-neon-pink transition-all duration-200"
                aria-label={item.label}
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>

      <!-- Mobile Social Icons (visible at 680px and below) -->
      <div id="social-icons-inline" class="social-icons-inline hidden items-center gap-2">
        <a
          href={profile.social.github}
          target="_blank"
          rel="noopener noreferrer"
          class="w-10 h-10 rounded-lg flex items-center justify-center text-gray-300 hover:text-neon-pink hover:bg-neon-pink/10 transition-all duration-200"
