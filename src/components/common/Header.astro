---
import { profile } from '../../data/profile';
import { navItems } from '../../data/navigation';
---

<header class="fixed top-0 left-0 right-0 z-50 px-4 py-4 md:px-8">
  <nav id="main-nav" class="glass max-w-7xl mx-auto px-4 py-3 flex items-center justify-between transition-all duration-300">
    <!-- Logo/Name -->
    <a
      href="/"
      class="flex items-center gap-3 group"
      aria-label="Leo Ashcraft - Home"
    >
      <div
        class="w-10 h-10 rounded-full bg-gradient-to-br from-neon-pink to-neon-purple flex items-center justify-center text-white font-bold text-lg"
        style="box-shadow: 0 0 15px rgba(255, 0, 255, 0.4);"
      >
        LA
      </div>
      <span
        class="hidden sm:block font-semibold text-white group-hover:text-neon-pink transition-colors"
      >
        {profile.name}
      </span>
    </a>

    <!-- Desktop Navigation -->
    <ul class="hidden md:flex items-center gap-1">
      {
        navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="px-4 py-2 rounded-lg text-gray-300 hover:text-neon-pink hover:bg-neon-pink/5 transition-all duration-200"
              aria-label={item.label}
            >
              {item.label}
            </a>
          </li>
        ))
      }
    </ul>

    <!-- Right Side Actions -->
    <div class="flex items-center gap-2">
      <!-- Social Links -->
      <a
        href={profile.social.github}
        target="_blank"
        rel="noopener noreferrer"
        class="w-10 h-10 rounded-lg flex items-center justify-center text-gray-300 hover:text-neon-pink hover:bg-neon-pink/10 transition-all duration-200"
        aria-label="GitHub Profile"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
      </a>

      <a
        href={profile.social.linkedin}
        target="_blank"
        rel="noopener noreferrer"
        class="w-10 h-10 rounded-lg flex items-center justify-center text-gray-300 hover:text-neon-purple hover:bg-neon-purple/10 transition-all duration-200"
        aria-label="LinkedIn Profile"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
          ></path>
        </svg>
      </a>

      <a
        href={`mailto:${profile.contact.email.user.split('').reverse().join('')}@${profile.contact.email.website.split('').reverse().join('')}`}
        class="w-10 h-10 rounded-lg flex items-center justify-center text-gray-300 hover:text-neon-yellow hover:bg-neon-yellow/10 transition-all duration-200"
        aria-label="Email me"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
          ></path>
        </svg>
      </a>

      <!-- Mobile Menu Toggle -->
      <button
        id="mobile-menu-toggle"
        class="md:hidden w-10 h-10 rounded-lg flex items-center justify-center text-gray-300 hover:text-neon-pink hover:bg-neon-pink/10 transition-all duration-200"
        aria-label="Toggle mobile menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="md:hidden fixed inset-x-4 top-20 p-4 opacity-0 invisible translate-y-[-10px] transition-all duration-300 rounded-2xl border border-white/10"
    style="background: rgba(10, 0, 21, 0.80); backdrop-filter: blur(16px); -webkit-backdrop-filter: blur(16px);"
    aria-hidden="true"
  >
    <ul class="space-y-2">
      {
        navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="block px-4 py-3 rounded-lg text-gray-300 hover:text-neon-pink hover:bg-neon-pink/5 transition-all duration-200"
            >
              {item.label}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</header>

<script>
  function initMobileMenu() {
    const toggle = document.getElementById('mobile-menu-toggle');
    const menu = document.getElementById('mobile-menu');

    if (!toggle || !menu) return;

    toggle.addEventListener('click', () => {
      const isOpen = menu.classList.contains('opacity-100');

      if (isOpen) {
        menu.classList.remove('opacity-100', 'visible', 'translate-y-0');
        menu.classList.add('opacity-0', 'invisible', 'translate-y-[-10px]');
        menu.setAttribute('aria-hidden', 'true');
        toggle.setAttribute('aria-expanded', 'false');
      } else {
        menu.classList.remove('opacity-0', 'invisible', 'translate-y-[-10px]');
        menu.classList.add('opacity-100', 'visible', 'translate-y-0');
        menu.setAttribute('aria-hidden', 'false');
        toggle.setAttribute('aria-expanded', 'true');
      }
    });

    // Close menu when clicking a link
    menu.querySelectorAll('a').forEach((link) => {
      link.addEventListener('click', () => {
        menu.classList.remove('opacity-100', 'visible', 'translate-y-0');
        menu.classList.add('opacity-0', 'invisible', 'translate-y-[-10px]');
        menu.setAttribute('aria-hidden', 'true');
        toggle.setAttribute('aria-expanded', 'false');
      });
    });
  }

  function initNavScroll() {
    const nav = document.getElementById('main-nav');
    if (!nav) return;

    const scrollThreshold = 300;

    // Arcade carpet gradient background
    const arcadeGradient = `
      linear-gradient(135deg, rgba(255, 0, 255, 0.1) 0%, transparent 50%),
      linear-gradient(225deg, rgba(102, 0, 255, 0.1) 0%, transparent 50%),
      linear-gradient(45deg, rgba(255, 255, 0, 0.05) 0%, transparent 50%),
      linear-gradient(315deg, rgba(0, 255, 0, 0.05) 0%, transparent 50%),
      rgba(10, 0, 21, 0.9)
    `;

    function updateNav() {
      const scrollY = window.scrollY;
      const progress = Math.min(scrollY / scrollThreshold, 1);

      if (progress > 0) {
        // Scrolled: apply arcade carpet background with increasing opacity
        const bgOpacity = 0.05 + (progress * 0.85); // 5% to 90%
        nav.style.background = arcadeGradient;
        nav.style.backgroundColor = `rgba(10, 0, 21, ${bgOpacity})`;
        nav.style.borderColor = `rgba(255, 0, 255, ${0.1 + progress * 0.2})`;
      } else {
        // At top: reset to glass style
        nav.style.background = '';
        nav.style.backgroundColor = '';
        nav.style.borderColor = '';
      }
    }

    window.addEventListener('scroll', updateNav, { passive: true });
    updateNav(); // Initial check
  }

  initMobileMenu();
  initNavScroll();
  document.addEventListener('astro:after-swap', () => {
    initMobileMenu();
    initNavScroll();
  });
</script>
