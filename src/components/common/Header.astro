        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="block px-4 py-3 rounded-lg text-gray-300 hover:text-neon-pink transition-colors duration-200"
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
      <!-- Theme Toggle (visible in menu at 374px and below) -->
      <div class="mobile-menu-theme-toggle px-4 py-3 border-t border-gray-700/50 hidden">
        <ThemeToggle />
      </div>
    </div>
  </nav>
</header>

<style>
  /* Default: hide everything, JS will manage visibility based on breakpoints */

  /* Desktop: >950px - nav links and social icons visible */
  @media (min-width: 951px) {
    .nav-links-inline {
      display: flex !important;
    }
    .social-icons-desktop {
      display: flex !important;
    }
    .theme-toggle-inline {
      display: block !important;
    }
    .info-menu-toggle {
      display: none !important;
    }
    .mobile-menu-toggle {
      display: none !important;
    }
    .social-icons-inline {
      display: none !important;
    }
  }

  /* Medium: 950px - 681px - nav links visible, info button for social icons + theme toggle */
  @media (min-width: 681px) and (max-width: 950px) {
    .nav-links-inline {
      display: flex !important;
    }
    .social-icons-desktop {
      display: none !important;
    }
    .theme-toggle-inline {
      display: none !important;
    }
    .info-menu-toggle {
      display: flex !important;
    }
    .mobile-menu-toggle {
      display: none !important;
    }
    .social-icons-inline {
      display: none !important;
    }
  }

  /* Mobile: 680px - 425px - social icons + theme toggle visible, hamburger for nav links */
  @media (min-width: 425px) and (max-width: 680px) {
    .nav-links-inline {
      display: none !important;
    }
    .social-icons-desktop {
      display: none !important;
    }
    .theme-toggle-inline {
      display: block !important;
    }
    .info-menu-toggle {
      display: none !important;
    }
    .mobile-menu-toggle {
      display: flex !important;
    }
    .social-icons-inline {
      display: flex !important;
    }
    .info-menu {
      display: none !important;
    }
  }

  /* Small Mobile: <=424px - social icons visible, theme toggle in hamburger menu */
  @media (max-width: 424px) {
    .nav-links-inline {
      display: none !important;
    }
    .social-icons-desktop {
      display: none !important;
    }
    .theme-toggle-inline {
      display: none !important;
    }
    .info-menu-toggle {
      display: none !important;
    }
    .mobile-menu-toggle {
      display: flex !important;
    }
    .social-icons-inline {
      display: flex !important;
    }
    .info-menu {
      display: none !important;
    }
    .mobile-menu-theme-toggle {
      display: block !important;
    }
  }
</style>

<script>
  // Arcade carpet gradient background - shared between functions
  const arcadeGradient = `
    linear-gradient(135deg, rgba(255, 0, 255, 0.1) 0%, transparent 50%),
    linear-gradient(225deg, rgba(102, 0, 255, 0.1) 0%, transparent 50%),
    linear-gradient(45deg, rgba(255, 255, 0, 0.05) 0%, transparent 50%),
    linear-gradient(315deg, rgba(0, 255, 0, 0.05) 0%, transparent 50%),
    rgba(10, 0, 21, 0.9)
  `;

  function initInfoMenu() {
    const toggle = document.getElementById('info-menu-toggle');
    const menu = document.getElementById('info-menu');
    const nav = document.getElementById('main-nav');
    const infoIcon = document.getElementById('info-icon');
    const closeIcon = document.getElementById('info-close-icon');

    if (!toggle || !menu || !nav || !infoIcon || !closeIcon) return;

    function applyDarkBg() {
      nav.style.background = arcadeGradient;
      nav.style.backgroundColor = 'rgba(10, 0, 21, 0.9)';
      nav.style.borderColor = 'rgba(255, 0, 255, 0.3)';
    }

    function removeDarkBg() {
      if (window.scrollY === 0) {
        nav.style.background = '';
        nav.style.backgroundColor = '';
        nav.style.borderColor = '';
      }
    }

    toggle.addEventListener('click', () => {
      const isOpen = menu.style.maxHeight !== '0px' && menu.style.maxHeight !== '';

      if (isOpen) {
        menu.style.maxHeight = '0';
        menu.setAttribute('aria-hidden', 'true');
        toggle.setAttribute('aria-expanded', 'false');
        infoIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
        removeDarkBg();
      } else {
        menu.style.maxHeight = menu.scrollHeight + 'px';
        menu.setAttribute('aria-hidden', 'false');
        toggle.setAttribute('aria-expanded', 'true');
        infoIcon.classList.add('hidden');
        closeIcon.classList.remove('hidden');
        applyDarkBg();
      }
    });

    // Close menu when clicking a link
    menu.querySelectorAll('a').forEach((link) => {
      link.addEventListener('click', () => {
        menu.style.maxHeight = '0';
        menu.setAttribute('aria-hidden', 'true');
        toggle.setAttribute('aria-expanded', 'false');
        infoIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
        removeDarkBg();
      });
    });
  }

  function initMobileMenu() {
    const toggle = document.getElementById('mobile-menu-toggle');
    const menu = document.getElementById('mobile-menu');
    const nav = document.getElementById('main-nav');
    const hamburgerIcon = document.getElementById('hamburger-icon');
    const closeIcon = document.getElementById('close-icon');

    if (!toggle || !menu || !nav || !hamburgerIcon || !closeIcon) return;

    function applyDarkBg() {
      nav.style.background = arcadeGradient;
      nav.style.backgroundColor = 'rgba(10, 0, 21, 0.9)';
      nav.style.borderColor = 'rgba(255, 0, 255, 0.3)';
    }

    function removeDarkBg() {
      if (window.scrollY === 0) {
        nav.style.background = '';
        nav.style.backgroundColor = '';
        nav.style.borderColor = '';
      }
    }

    toggle.addEventListener('click', () => {
      const isOpen = menu.style.maxHeight !== '0px' && menu.style.maxHeight !== '';

      if (isOpen) {
        menu.style.maxHeight = '0';
        menu.setAttribute('aria-hidden', 'true');
        toggle.setAttribute('aria-expanded', 'false');
        hamburgerIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
        nav.classList.remove('menu-expanded');
        removeDarkBg();
      } else {
        menu.style.maxHeight = menu.scrollHeight + 'px';
        menu.setAttribute('aria-hidden', 'false');
        toggle.setAttribute('aria-expanded', 'true');
        hamburgerIcon.classList.add('hidden');
        closeIcon.classList.remove('hidden');
        nav.classList.add('menu-expanded');
        applyDarkBg();
      }
    });

    menu.querySelectorAll('a').forEach((link) => {
      link.addEventListener('click', () => {
        menu.style.maxHeight = '0';
        menu.setAttribute('aria-hidden', 'true');
        toggle.setAttribute('aria-expanded', 'false');
        hamburgerIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
        nav.classList.remove('menu-expanded');
        removeDarkBg();
      });
    });
  }

  function initNavScroll() {
    const nav = document.getElementById('main-nav');
    if (!nav) return;

    const scrollThreshold = 300;

    function updateNav() {
      const scrollY = window.scrollY;
      const progress = Math.min(scrollY / scrollThreshold, 1);

      if (progress > 0) {
        const bgOpacity = 0.05 + (progress * 0.85);
        nav.style.background = arcadeGradient;
        nav.style.backgroundColor = `rgba(10, 0, 21, ${bgOpacity})`;
        nav.style.borderColor = `rgba(255, 0, 255, ${0.1 + progress * 0.2})`;
      } else {
        nav.style.background = '';
        nav.style.backgroundColor = '';
        nav.style.borderColor = '';
      }
    }

    window.addEventListener('scroll', updateNav, { passive: true });
    updateNav();
  }

  function initNavHeatGlow() {
    const nav = document.getElementById('main-nav');
    const glow = document.getElementById('nav-heat-glow');
    if (!nav || !glow) return;

    nav.addEventListener('mousemove', (e) => {
      const rect = nav.getBoundingClientRect();
      glow.style.left = `${e.clientX - rect.left}px`;
      glow.style.top = `${e.clientY - rect.top}px`;
      glow.style.opacity = '1';
    });

    nav.addEventListener('mouseleave', () => {
      glow.style.opacity = '0';
    });
  }

  function initMenuResizeHandler() {
    const mobileMenu = document.getElementById('mobile-menu');
    const infoMenu = document.getElementById('info-menu');
    const mobileToggle = document.getElementById('mobile-menu-toggle');
    const infoToggle = document.getElementById('info-menu-toggle');
    const hamburgerIcon = document.getElementById('hamburger-icon');
    const mobileCloseIcon = document.getElementById('close-icon');
    const infoIcon = document.getElementById('info-icon');
    const infoCloseIcon = document.getElementById('info-close-icon');
    const nav = document.getElementById('main-nav');

    if (!mobileMenu || !infoMenu || !nav) return;

    let resizeTimeout: ReturnType<typeof setTimeout>;

    function closeAllMenus() {
      // Close mobile menu
      if (mobileMenu.style.maxHeight !== '0px' && mobileMenu.style.maxHeight !== '') {
        mobileMenu.style.maxHeight = '0';
        mobileMenu.setAttribute('aria-hidden', 'true');
        mobileToggle?.setAttribute('aria-expanded', 'false');
        hamburgerIcon?.classList.remove('hidden');
        mobileCloseIcon?.classList.add('hidden');
        nav.classList.remove('menu-expanded');
      }

      // Close info menu
      if (infoMenu.style.maxHeight !== '0px' && infoMenu.style.maxHeight !== '') {
        infoMenu.style.maxHeight = '0';
        infoMenu.setAttribute('aria-hidden', 'true');
        infoToggle?.setAttribute('aria-expanded', 'false');
        infoIcon?.classList.remove('hidden');
        infoCloseIcon?.classList.add('hidden');
      }

      // Reset nav background if at top
      if (window.scrollY === 0) {
        nav.style.background = '';
        nav.style.backgroundColor = '';
        nav.style.borderColor = '';
      }
    }

    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        const width = window.innerWidth;

        // Close mobile menu when viewport goes above 680px
        if (width > 680) {
          if (mobileMenu.style.maxHeight !== '0px' && mobileMenu.style.maxHeight !== '') {
            closeAllMenus();
          }
        }

        // Close info menu when viewport goes outside 681px-950px range
        if (width <= 680 || width > 950) {
          if (infoMenu.style.maxHeight !== '0px' && infoMenu.style.maxHeight !== '') {
            closeAllMenus();
          }
        }
      }, 100);
    });
  }

  function initHeader() {
    initInfoMenu();
    initMobileMenu();
    initNavScroll();
    initNavHeatGlow();
    initMenuResizeHandler();
  }

  initHeader();
  document.addEventListener('astro:after-swap', initHeader);
</script>
