---
import { navItems } from '../../data/navigation';
import SocialIcons from './SocialIcons.astro';
---

<header class="fixed top-0 left-0 right-0 z-50 px-4 py-4 md:px-8">
  <nav id="main-nav" class="glass max-w-7xl mx-auto px-4 py-3 flex flex-wrap items-center justify-between transition-all duration-300 relative overflow-hidden">
    <!-- Heat sensor glow effect - pink to purple left to right -->
    <div id="nav-heat-glow" class="pointer-events-none absolute w-96 h-40 rounded-full opacity-0 transition-opacity duration-200" style="background: linear-gradient(to right, rgba(255, 0, 255, 0.15), rgba(102, 0, 255, 0.15)); transform: translate(-50%, -50%); filter: blur(30px);"></div>

    <!-- Left Side: Desktop Nav OR Mobile Social Icons -->
    <div class="flex items-center gap-1">
      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center gap-1">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="px-4 py-2 rounded-lg text-gray-300 hover:text-neon-pink hover:bg-neon-pink/5 transition-all duration-200"
                aria-label={item.label}
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>

      <!-- Mobile Social Links (left side) -->
      <SocialIcons class="flex md:hidden" />
    </div>

    <!-- Right Side: Desktop Social Icons OR Mobile Hamburger -->
    <div class="flex items-center gap-2">
      <!-- Desktop Social Links -->
      <SocialIcons class="hidden md:flex" />

      <!-- Mobile Menu Toggle (right side) -->
      <button
        id="mobile-menu-toggle"
        class="md:hidden w-10 h-10 rounded-lg flex items-center justify-center text-gray-300 hover:text-neon-pink hover:bg-neon-pink/10 transition-all duration-200"
        aria-label="Toggle mobile menu"
        aria-expanded="false"
      >
        <!-- Hamburger icon -->
        <svg id="hamburger-icon" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <!-- Close icon (hidden by default) -->
        <svg id="close-icon" class="w-6 h-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu (inside nav, expands when open) -->
    <div
      id="mobile-menu"
      class="mobile-nav-menu md:hidden w-full overflow-hidden transition-all duration-300 ease-in-out"
      style="max-height: 0;"
      aria-hidden="true"
    >
      <ul class="py-2 space-y-1">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="block px-4 py-3 rounded-lg text-gray-300 hover:text-neon-pink transition-colors duration-200"
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </nav>
</header>

<script>
  // Arcade carpet gradient background - shared between functions
  const arcadeGradient = `
    linear-gradient(135deg, rgba(255, 0, 255, 0.1) 0%, transparent 50%),
    linear-gradient(225deg, rgba(102, 0, 255, 0.1) 0%, transparent 50%),
    linear-gradient(45deg, rgba(255, 255, 0, 0.05) 0%, transparent 50%),
    linear-gradient(315deg, rgba(0, 255, 0, 0.05) 0%, transparent 50%),
    rgba(10, 0, 21, 0.9)
  `;

  function initMobileMenu() {
    const toggle = document.getElementById('mobile-menu-toggle');
    const menu = document.getElementById('mobile-menu');
    const nav = document.getElementById('main-nav');
    const hamburgerIcon = document.getElementById('hamburger-icon');
    const closeIcon = document.getElementById('close-icon');

    if (!toggle || !menu || !nav || !hamburgerIcon || !closeIcon) return;

    function applyDarkBg() {
      nav.style.background = arcadeGradient;
      nav.style.backgroundColor = 'rgba(10, 0, 21, 0.9)';
      nav.style.borderColor = 'rgba(255, 0, 255, 0.3)';
    }

    function removeDarkBg() {
      if (window.scrollY === 0) {
        nav.style.background = '';
        nav.style.backgroundColor = '';
        nav.style.borderColor = '';
      }
    }

    toggle.addEventListener('click', () => {
      const isOpen = menu.style.maxHeight !== '0px' && menu.style.maxHeight !== '';

      if (isOpen) {
        menu.style.maxHeight = '0';
        menu.setAttribute('aria-hidden', 'true');
        toggle.setAttribute('aria-expanded', 'false');
        hamburgerIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
        menu.classList.remove('menu-open');
        removeDarkBg();
      } else {
        menu.style.maxHeight = menu.scrollHeight + 'px';
        menu.setAttribute('aria-hidden', 'false');
        toggle.setAttribute('aria-expanded', 'true');
        hamburgerIcon.classList.add('hidden');
        closeIcon.classList.remove('hidden');
        menu.classList.add('menu-open');
        applyDarkBg();
      }
    });

    menu.querySelectorAll('a').forEach((link) => {
      link.addEventListener('click', () => {
        menu.style.maxHeight = '0';
        menu.setAttribute('aria-hidden', 'true');
        toggle.setAttribute('aria-expanded', 'false');
        hamburgerIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
        menu.classList.remove('menu-open');
        removeDarkBg();
      });
    });
  }

  function initNavScroll() {
    const nav = document.getElementById('main-nav');
    if (!nav) return;

    const scrollThreshold = 300;

    function updateNav() {
      const scrollY = window.scrollY;
      const progress = Math.min(scrollY / scrollThreshold, 1);

      if (progress > 0) {
        const bgOpacity = 0.05 + (progress * 0.85);
        nav.style.background = arcadeGradient;
        nav.style.backgroundColor = `rgba(10, 0, 21, ${bgOpacity})`;
        nav.style.borderColor = `rgba(255, 0, 255, ${0.1 + progress * 0.2})`;
      } else {
        nav.style.background = '';
        nav.style.backgroundColor = '';
        nav.style.borderColor = '';
      }
    }

    window.addEventListener('scroll', updateNav, { passive: true });
    updateNav();
  }

  function initNavHeatGlow() {
    const nav = document.getElementById('main-nav');
    const glow = document.getElementById('nav-heat-glow');
    if (!nav || !glow) return;

    nav.addEventListener('mousemove', (e) => {
      const rect = nav.getBoundingClientRect();
      glow.style.left = `${e.clientX - rect.left}px`;
      glow.style.top = `${e.clientY - rect.top}px`;
      glow.style.opacity = '1';
    });

    nav.addEventListener('mouseleave', () => {
      glow.style.opacity = '0';
    });
  }

  function initHeader() {
    initMobileMenu();
    initNavScroll();
    initNavHeatGlow();
  }

  initHeader();
  document.addEventListener('astro:after-swap', initHeader);
</script>
