---
import ContributionHeatmap from './ContributionHeatmap';
import { getPublicRepos, fetchContributionData, languageColors } from '../../lib/github';

// Fetch data at build time
const repos = await getPublicRepos();
const contributionData = await fetchContributionData();
---

<section id="github" class="section section-arcade px-4 overflow-hidden" aria-labelledby="github-heading">
  <!-- Neon Top Border -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-neon-green/50 to-transparent"></div>

  <!-- Floating Arcade Decorations -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden arcade-decorations" aria-hidden="true" data-section="github">
    <!-- Glowing orbs with parallax -->
    <div class="absolute top-32 left-20 w-72 h-72 rounded-full bg-neon-green/8 blur-3xl will-change-transform" data-parallax="0.3"></div>
    <div class="absolute bottom-40 right-10 w-64 h-64 rounded-full bg-neon-pink/8 blur-3xl will-change-transform" data-parallax="0.4" data-parallax-dir="down"></div>
    <div class="absolute top-1/2 right-1/4 w-48 h-48 rounded-full bg-neon-purple/5 blur-2xl will-change-transform" data-parallax="0.5"></div>

    <!-- Geometric shapes with parallax + animations -->
    <div class="absolute top-24 right-[10%] w-0 h-0 border-l-[12px] border-l-transparent border-r-[12px] border-r-transparent border-b-[20px] border-b-neon-green/40 drift-1 will-change-transform" data-parallax="0.7" data-parallax-x="0.3"></div>
    <div class="absolute top-[50%] left-[5%] w-7 h-7 border-2 border-neon-pink/35 rounded-full pulse-drift will-change-transform" data-parallax="0.6" data-parallax-x="0.2"></div>
    <div class="absolute bottom-[35%] right-[6%] w-6 h-6 bg-neon-yellow/25 rotate-45 float-rotate will-change-transform" data-parallax="0.8" data-parallax-dir="down"></div>
    <div class="absolute top-[30%] left-[8%] w-5 h-5 border-2 border-neon-purple/35 rotate-45 sway will-change-transform" data-parallax="0.5" data-parallax-x="-0.2"></div>
    <div class="absolute bottom-28 left-[20%] w-0 h-0 border-l-[10px] border-l-transparent border-r-[10px] border-r-transparent border-b-[17px] border-b-neon-orange/30 wobble will-change-transform" data-parallax="0.9" data-parallax-dir="down"></div>

    <!-- Binary-like dots pattern with parallax + animation -->
    <div class="absolute top-[40%] right-[3%] flex flex-col gap-2 opacity-30 drift-2 will-change-transform" data-parallax="0.6" data-parallax-x="-0.3">
      <div class="flex gap-2">
        <div class="w-2 h-2 bg-neon-green rounded-full"></div>
        <div class="w-2 h-2 bg-neon-green/30 rounded-full"></div>
      </div>
      <div class="flex gap-2">
        <div class="w-2 h-2 bg-neon-green/30 rounded-full"></div>
        <div class="w-2 h-2 bg-neon-green rounded-full"></div>
      </div>
    </div>

    <!-- Squiggly line with parallax + animation -->
    <svg class="absolute bottom-[45%] left-[2%] w-8 h-16 text-neon-pink/25 wobble will-change-transform" data-parallax="0.7" data-parallax-x="0.4" viewBox="0 0 32 64">
      <path d="M16 0 Q0 16 16 32 Q32 48 16 64" fill="none" stroke="currentColor" stroke-width="2"/>
    </svg>

    <!-- Circle ring with parallax + animation -->
    <div class="absolute top-[65%] right-[8%] w-10 h-10 border-2 border-neon-green/30 rounded-full drift-3 spin-slow will-change-transform" data-parallax="0.8" data-parallax-x="-0.2"></div>
  </div>

  <div class="max-w-6xl mx-auto relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16 section-header-container">
      <h2 id="github-heading" class="section-title">
        GitHub <span class="gradient-text">Activity</span>
      </h2>
      <p class="section-subtitle mx-auto relative">
        <span class="subtitle-placeholder invisible" aria-hidden="true">Open source contributions and personal projects</span>
        <span class="subtitle-typewriter absolute left-0 right-0 top-0">
          <span class="subtitle-text" data-subtitle="Open source contributions and personal projects" id="github-heading-subtitle"></span><span class="subtitle-cursor hidden inline-block w-[2px] h-[1em] bg-neon-cyan ml-1 align-middle animate-[cursor-blink_1s_step-end_infinite]"></span>
        </span>
      </p>
    </div>

    <!-- Contribution Heatmap -->
    <div class="card mb-12">
      <ContributionHeatmap client:visible data={contributionData} />
    </div>

    <!-- Recent Repositories -->
    <h3 class="text-xl font-bold text-white mb-6">Recent Repositories</h3>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {repos.length > 0 ? (
        repos.map((repo) => (
          <a
            href={repo.html_url}
            target="_blank"
            rel="noopener noreferrer"
            class="card card-highlighted group block"
          >
            <div class="flex items-start justify-between mb-3">
              <div class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 text-gray-400"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"
                  />
                </svg>
                <span class="font-medium text-white group-hover:text-neon-pink transition-colors">
                  {repo.name}
                </span>
              </div>
              <svg
                class="w-4 h-4 text-gray-500 group-hover:text-neon-pink transition-colors"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                />
              </svg>
            </div>

            <p class="text-gray-400 text-sm mb-4 line-clamp-2">
              {repo.description || 'No description provided'}
            </p>

            <div class="flex items-center gap-4 text-sm">
              {repo.language && (
                <span class="flex items-center gap-1">
                  <span
                    class="w-3 h-3 rounded-full"
                    style={`background-color: ${languageColors[repo.language] || '#8b8b8b'}`}
                  />
                  <span class="text-gray-400">{repo.language}</span>
                </span>
              )}

              {repo.stargazers_count > 0 && (
                <span class="flex items-center gap-1 text-gray-400">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z" />
                  </svg>
                  {repo.stargazers_count}
                </span>
              )}

              {repo.forks_count > 0 && (
                <span class="flex items-center gap-1 text-gray-400">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"
                    />
                  </svg>
                  {repo.forks_count}
                </span>
              )}
            </div>
          </a>
        ))
      ) : (
        <div class="col-span-full text-center py-12">
          <p class="text-gray-400">Loading repositories...</p>
          <p class="text-gray-500 text-sm mt-2">
            Visit{' '}
            <a
              href="https://github.com/leoashcraft"
              target="_blank"
              rel="noopener noreferrer"
              class="text-neon-pink hover:underline"
            >
              github.com/leoashcraft
            </a>{' '}
            to see all projects
          </p>
        </div>
      )}
    </div>

    <!-- GitHub CTA -->
    <div class="text-center mt-12">
      <a
        href="https://github.com/leoashcraft"
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-secondary"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
        </svg>
        View All Repositories
      </a>
    </div>
  </div>
</section>

<script>
  import { typePhrase } from '../../lib/typewriter';
  import { initSectionParallax } from '../../lib/parallax';

  function initGitHubSubtitleTypewriter() {
    const container = document.querySelector('#github .section-header-container');
    if (!container) return;

    const textEl = container.querySelector('.subtitle-text') as HTMLElement;
    const cursorEl = container.querySelector('.subtitle-cursor') as HTMLElement;

    if (!textEl || !cursorEl || textEl.dataset.animated === 'true') return;

    const subtitle = textEl.dataset.subtitle || '';

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting && textEl.dataset.animated !== 'true') {
            textEl.dataset.animated = 'true';
            observer.disconnect();

            setTimeout(() => {
              cursorEl.classList.remove('hidden');
              typePhrase(textEl, subtitle, () => {
                setTimeout(() => {
                  cursorEl.style.display = 'none';
                }, 2000);
              });
            }, 800);
          }
        });
      },
      { threshold: 0.1 }
    );

    observer.observe(container);
  }

  function initGitHub() {
    initGitHubSubtitleTypewriter();
    initSectionParallax('github');
  }

  initGitHub();
  document.addEventListener('astro:after-swap', initGitHub);
</script>
