---
import { profile } from '../../data/profile';
import { skills, services } from '../../data/skills';
---

<section id="about" class="section px-4" aria-labelledby="about-heading">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 id="about-heading" class="section-title">
        About <span class="gradient-text">Me</span>
      </h2>
      <p class="section-subtitle mx-auto">
        Building digital solutions with 15+ years of experience
      </p>
    </div>

    <!-- Content Grid -->
    <div class="grid lg:grid-cols-2 gap-12 items-center mb-20">
      <!-- Photo -->
      <div class="relative">
        <div
          class="relative z-10 rounded-2xl overflow-hidden border-2 border-neon-cyan/20"
        >
          <img
            src={profile.photoUrl}
            alt={`${profile.name} - ${profile.title}`}
            class="w-full h-auto"
            loading="lazy"
          />
          <!-- Gradient overlay -->
          <div
            class="absolute inset-0 bg-gradient-to-t from-night-900/80 via-transparent to-transparent"
          >
          </div>
        </div>
        <!-- Decorative elements -->
        <div
          class="absolute -top-4 -right-4 w-full h-full border-2 border-neon-purple/30 rounded-2xl -z-10"
          aria-hidden="true"
        >
        </div>
        <div
          class="absolute -bottom-4 -left-4 w-32 h-32 bg-neon-cyan/10 rounded-full blur-2xl"
          aria-hidden="true"
        >
        </div>
      </div>

      <!-- Bio -->
      <div>
        <h3 class="text-2xl font-bold text-white mb-4">
          {profile.tagline}
        </h3>
        <div class="prose prose-lg mb-8">
          <p class="text-gray-300 leading-relaxed">
            {profile.bio}
          </p>
        </div>

        <!-- Quick Info -->
        <div class="grid grid-cols-2 gap-4 mb-8">
          <div class="glass p-4">
            <span class="text-gray-400 text-sm">Location</span>
            <p class="text-white font-medium">{profile.location}</p>
          </div>
          <div class="glass p-4">
            <span class="text-gray-400 text-sm">Availability</span>
            <p class="text-neon-green font-medium">Open to opportunities</p>
          </div>
        </div>

        <!-- CTA -->
        <div class="flex flex-wrap gap-4">
          <a href={profile.resumeUrl} download class="btn btn-primary">
            Download Resume
            <svg
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
          </a>
          <a href="#contact" class="btn btn-secondary">
            Let's Talk
          </a>
        </div>
      </div>
    </div>

    <!-- Skills Section -->
    <div class="mb-20">
      <h3 class="text-2xl font-bold text-white text-center mb-8">
        Technical <span class="gradient-text">Skills</span>
      </h3>

      <div class="grid md:grid-cols-3 gap-6">
        {
          skills.map((category) => (
            <div class="card">
              <h4 class="text-lg font-semibold text-white mb-4">
                {category.name}
              </h4>
              <div class="space-y-3">
                {category.skills.slice(0, 5).map((skill) => (
                  <div>
                    <div class="flex justify-between text-sm mb-1">
                      <span class="text-gray-300">{skill.name}</span>
                      <span class="text-neon-cyan">{skill.level}%</span>
                    </div>
                    <div class="h-2 bg-night-700 rounded-full overflow-hidden">
                      <div
                        class="h-full bg-gradient-to-r from-neon-cyan to-neon-purple rounded-full transition-all duration-1000"
                        style={`width: ${skill.level}%`}
                        role="progressbar"
                        aria-valuenow={skill.level}
                        aria-valuemin="0"
                        aria-valuemax="100"
                        aria-label={`${skill.name}: ${skill.level}%`}
                      />
                    </div>
                  </div>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Services Section -->
    <div>
      <h3 class="text-2xl font-bold text-white text-center mb-8">
        What I <span class="gradient-text">Offer</span>
      </h3>

      <div class="grid md:grid-cols-3 gap-6">
        {
          services.map((service, index) => (
            <div class="card card-highlighted group">
              <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-neon-cyan/20 to-neon-purple/20 flex items-center justify-center mb-4 group-hover:from-neon-cyan/30 group-hover:to-neon-purple/30 transition-colors">
                {service.icon === 'code' && (
                  <svg
                    class="w-6 h-6 text-neon-cyan"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
                    />
                  </svg>
                )}
                {service.icon === 'cloud' && (
                  <svg
                    class="w-6 h-6 text-neon-cyan"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"
                    />
                  </svg>
                )}
                {service.icon === 'puzzle' && (
                  <svg
                    class="w-6 h-6 text-neon-cyan"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"
                    />
                  </svg>
                )}
              </div>
              <h4 class="text-lg font-semibold text-white mb-2">
                {service.title}
              </h4>
              <p class="text-gray-400 text-sm mb-4">{service.description}</p>
              <ul class="space-y-2">
                {service.features.map((feature) => (
                  <li class="flex items-center gap-2 text-sm text-gray-300">
                    <svg
                      class="w-4 h-4 text-neon-green shrink-0"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
