</section>

<script>
  import { initIconFlips } from '../../lib/icon-flip';
  import { typePhrase, deletePhrase } from '../../lib/typewriter';

  let iconCleanup: () => void;

  function initServiceIconFlips() {
    iconCleanup?.();
    iconCleanup = initIconFlips({ selector: '.service-icon' });
  }

  // Rotating tagline typewriter
  let taglineAnimated = false;
  let taglineInterval: number | undefined;

  const taglines = [
    "I build solutions that ship",
    "I turn ideas into production code",
    "I make manual workflows obsolete"
  ];

  function initTaglineTypewriter() {
    if (taglineAnimated) return;

    const taglineEl = document.getElementById('about-tagline');
    const textEl = document.getElementById('tagline-text');
    const cursorEl = document.getElementById('tagline-cursor');

    if (!taglineEl || !textEl || !cursorEl) return;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting && !taglineAnimated) {
            taglineAnimated = true;
            observer.disconnect();

            setTimeout(() => {
              cursorEl.classList.remove('hidden');

              // Start bio line animation
              const bioLines = document.querySelectorAll('.bio-line') as NodeListOf<HTMLElement>;
              bioLines.forEach((line, i) => {
                setTimeout(() => {
                  line.classList.add('grow');
                  setTimeout(() => line.classList.remove('grow'), 300);
                }, i * 200);
              });

              let currentIndex = 0;

              function cycleTagline() {
                typePhrase(textEl, taglines[currentIndex], () => {
                  // If this is the last phrase, stop and hide cursor
                  if (currentIndex === taglines.length - 1) {
                    setTimeout(() => {
                      textEl.textContent = textEl.textContent + '.';
                      cursorEl.style.display = 'none';
                      textEl.classList.add('animate-underline');
                    }, 3000); // 3 blinks, add period, underline, then hide
                    return;
                  }

                  // Otherwise delete and move to next phrase
                  setTimeout(() => {
                    deletePhrase(textEl, () => {
                      currentIndex++;
                      setTimeout(cycleTagline, 300);
                    }, { deleteSpeed: 25 });
                  }, 2500); // Pause before deleting
                });
              }

              cycleTagline();
            }, 300);
          }
        });
      },
      { threshold: 0.1, rootMargin: '0px 0px -5% 0px' }
    );

    observer.observe(taglineEl);
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      initServiceIconFlips();
      initTaglineTypewriter();
    });
  } else {
    initServiceIconFlips();
    initTaglineTypewriter();
  }
  document.addEventListener('astro:after-swap', () => {
    initServiceIconFlips();
    taglineAnimated = false;
    if (taglineInterval) clearInterval(taglineInterval);
    initTaglineTypewriter();
  });
</script>
