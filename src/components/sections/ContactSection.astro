---
import { profile } from '../../data/profile';
import { site } from '../../data/site';
import ContactForm from '../contact/ContactForm';
import SectionHeader from '../common/SectionHeader.astro';
import ArcadeDecorations from '../common/ArcadeDecorations.astro';
import Icon from '../ui/Icon.astro';
import { unscrambleEmail, unscramblePhone } from '../../lib/contact';

// Unscramble email and phone for display
const email = unscrambleEmail(profile);
const phone = unscramblePhone(profile);
---

<section
  id="contact"
  class="section section-arcade-alt px-4 overflow-hidden scroll-mt-28"
  aria-labelledby="contact-heading"
>
  <!-- Graffiti background image with parallax -->
  <div class="absolute inset-0 -z-30 overflow-hidden" aria-hidden="true">
    <img
      id="contact-parallax-bg"
      src="/img/graffiti-bg2.avif"
      alt=""
      loading="lazy"
      class="absolute inset-0 w-[120%] h-[120%] object-cover object-center will-change-transform"
    />
    <!-- Gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-[#0a0015]/80 via-[#0a0015]/60 to-[#0a0015]/80"></div>
  </div>

  <!-- Neon Top Border -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-neon-yellow/50 to-transparent"></div>

  <!-- Floating Arcade Decorations -->
  <ArcadeDecorations variant="contact" />

  <div class="max-w-6xl mx-auto relative z-10">
    <!-- Section Header -->
    <SectionHeader
      title={site.sections.contact.title}
      titleHighlight={site.sections.contact.titleHighlight}
      subtitle={site.sections.contact.subtitle}
      headingId="contact-heading"
    />

    <div class="contact-grid grid lg:grid-cols-2 gap-12">
      <!-- Contact Info -->
      <div class="contact-info">
        <h3 class="contact-connect-title text-2xl font-bold text-white mb-6">{site.sections.contact.connectTitle}</h3>
        <p class="contact-connect-desc text-gray-400 mb-8">
          {site.sections.contact.connectDescription}
        </p>

        <!-- Contact Details -->
        <div class="contact-details space-y-6 mb-8">
          <div class="flex items-start gap-4">
            <div
              class="w-12 h-12 rounded-xl bg-neon-cyan/10 flex items-center justify-center shrink-0"
            >
              <svg
                class="w-6 h-6 text-neon-cyan"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <div>
              <p class="text-gray-400 text-sm">Email</p>
              <a
                href={`mailto:${email}`}
                class="text-white hover:text-neon-cyan transition-colors"
              >
                {email}
              </a>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div
              class="w-12 h-12 rounded-xl bg-neon-purple/10 flex items-center justify-center shrink-0"
            >
              <svg
                class="w-6 h-6 text-neon-purple"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
            </div>
            <div>
              <p class="text-gray-400 text-sm">Phone</p>
              <a
                href={`tel:${phone.replace(/[^0-9]/g, '')}`}
                class="text-white hover:text-neon-cyan transition-colors"
              >
                {phone}
              </a>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div
              class="w-12 h-12 rounded-xl bg-neon-pink/10 flex items-center justify-center shrink-0"
            >
              <svg
                class="w-6 h-6 text-neon-pink"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <p class="text-gray-400 text-sm">Location</p>
              <p class="text-white">{profile.location}</p>
            </div>
          </div>
        </div>

        <!-- Social Links -->
        <div class="contact-social flex gap-4">
          <a
            href={profile.social.linkedin}
            target="_blank"
            rel="me noopener noreferrer"
            class="social-link w-12 h-12 rounded-xl bg-neon-pink/10 border border-neon-pink/20 flex items-center justify-center text-gray-400 hover:bg-neon-pink/20 hover:text-neon-pink hover:border-neon-pink/40 transition-all"
            aria-label="Connect on LinkedIn"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>

          <a
            href={profile.social.github}
            target="_blank"
            rel="me noopener noreferrer"
            class="social-link w-12 h-12 rounded-xl bg-neon-pink/10 border border-neon-pink/20 flex items-center justify-center text-gray-400 hover:bg-neon-pink/20 hover:text-neon-pink hover:border-neon-pink/40 transition-all"
            aria-label="Follow on GitHub"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="contact-form-container card">
        <h3 class="text-xl font-bold text-white mb-6">{site.sections.contact.formTitle}</h3>
        <ContactForm client:visible />
      </div>
    </div>

    <!-- Disclaimer -->
    <p class="contact-disclaimer text-sm text-gray-500 text-center mt-12">
      {site.footer.disclaimer}
    </p>
  </div>
</section>

<script>
  import { initSectionParallax } from '../../lib/parallax';

  function initContactParallax() {
    const parallaxBg = document.getElementById('contact-parallax-bg');
    const contactSection = document.getElementById('contact');
    if (!parallaxBg || !contactSection) return;

    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    if (prefersReducedMotion) return;

    let ticking = false;

    function updateParallax() {
      const rect = contactSection.getBoundingClientRect();
      const windowHeight = window.innerHeight;

      // Only apply parallax when section is in view
      if (rect.top < windowHeight && rect.bottom > 0) {
        const parallaxSpeed = 0.5;
        const sectionTop = rect.top;
        const yOffset = (windowHeight - sectionTop) * parallaxSpeed * -0.6;
        parallaxBg.style.transform = `translateY(${yOffset}px)`;
      }
      ticking = false;
    }

    window.addEventListener('scroll', () => {
      if (!ticking) {
        requestAnimationFrame(updateParallax);
        ticking = true;
      }
    }, { passive: true });

    // Initial call
    updateParallax();
  }

  function initContact() {
    initContactParallax();
    initSectionParallax('contact');
  }

  initContact();
  document.addEventListener('astro:after-swap', initContact);

  // Contact section cascade animations
  let contactAnimCleanup: (() => void) | undefined;

  function initContactAnimations() {
    const grid = document.querySelector('.contact-grid') as HTMLElement;
    const connectTitle = document.querySelector('.contact-connect-title') as HTMLElement;
    const connectDesc = document.querySelector('.contact-connect-desc') as HTMLElement;
    const details = document.querySelector('.contact-details') as HTMLElement;
    const social = document.querySelector('.contact-social') as HTMLElement;
    const formContainer = document.querySelector('.contact-form-container') as HTMLElement;
    const disclaimer = document.querySelector('.contact-disclaimer') as HTMLElement;

    if (!grid) return () => {};

    // Skip if animations disabled
    if (document.documentElement.getAttribute('data-animations') === 'disabled') {
      [connectTitle, connectDesc, details, social, formContainer, disclaimer].forEach(el => {
        if (el) el.classList.add('visible');
      });
      return () => {};
    }

    let ticking = false;

    const checkContact = () => {
      const viewportHeight = window.innerHeight;
      const titleTrigger = viewportHeight * 0.7;
      const cascadeTrigger = viewportHeight * 0.6;
      const formTrigger = viewportHeight * 0.5;
      const disclaimerTrigger = viewportHeight * 0.35;
      const exitPoint = viewportHeight * 0.85;

      const gridRect = grid.getBoundingClientRect();

      // Title cascades first
      if (gridRect.top < titleTrigger) {
        if (connectTitle) connectTitle.classList.add('visible');
      }

      // Description and details cascade
      if (gridRect.top < cascadeTrigger) {
        if (connectDesc) connectDesc.classList.add('visible');
        setTimeout(() => {
          if (details) details.classList.add('visible');
        }, 150);
        setTimeout(() => {
          if (social) social.classList.add('visible');
        }, 300);
      }

      // Form flies in from right
      if (gridRect.top < formTrigger) {
        if (formContainer) formContainer.classList.add('visible');
      }

      // Disclaimer appears after scrolling a bit more
      if (gridRect.top < disclaimerTrigger) {
        if (disclaimer) disclaimer.classList.add('visible');
      }

      // Reset when scrolling up
      if (gridRect.top > exitPoint) {
        [connectTitle, connectDesc, details, social, formContainer, disclaimer].forEach(el => {
          if (el) el.classList.remove('visible');
        });
      }

      ticking = false;
    };

    const handleScroll = () => {
      if (!ticking) {
        requestAnimationFrame(checkContact);
        ticking = true;
      }
    };

    window.addEventListener('scroll', handleScroll, { passive: true });
    checkContact();

    return () => {
      window.removeEventListener('scroll', handleScroll);
    };
  }

  function initContactAnim() {
    contactAnimCleanup?.();
    contactAnimCleanup = initContactAnimations();
  }

  initContactAnim();
  document.addEventListener('astro:after-swap', initContactAnim);

  window.addEventListener('animations-change', () => {
    contactAnimCleanup?.();
    contactAnimCleanup = initContactAnimations();
  });
</script>

<style>
  /* Contact section cascade animations */
  .contact-connect-title,
  .contact-connect-desc,
  .contact-details,
  .contact-social {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.5s ease-out, transform 0.5s ease-out;
  }

  .contact-connect-title.visible,
  .contact-connect-desc.visible,
  .contact-details.visible,
  .contact-social.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Form flies in from right */
  .contact-form-container {
    opacity: 0;
    transform: translateX(100px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .contact-form-container.visible {
    opacity: 1;
    transform: translateX(0);
  }

  /* Disclaimer flies in from bottom */
  .contact-disclaimer {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .contact-disclaimer.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Disable animations when preference set */
  [data-animations="disabled"] .contact-connect-title,
  [data-animations="disabled"] .contact-connect-desc,
  [data-animations="disabled"] .contact-details,
  [data-animations="disabled"] .contact-social,
  [data-animations="disabled"] .contact-form-container,
  [data-animations="disabled"] .contact-disclaimer {
    opacity: 1 !important;
    transform: none !important;
    transition: none !important;
  }
</style>
