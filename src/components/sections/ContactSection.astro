---
import { profile } from '../../data/profile';
import ContactForm from '../contact/ContactForm';

// Unscramble email and phone for display
const email =
  profile.contact.email.user.split('').reverse().join('') +
  '@' +
  profile.contact.email.website.split('').reverse().join('');
const phone = profile.contact.phone.user + ' ' + profile.contact.phone.website;
---

<section
  id="contact"
  class="section section-arcade-alt px-4 overflow-hidden"
  aria-labelledby="contact-heading"
>
  <!-- Neon Top Border -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-neon-yellow/50 to-transparent"></div>

  <!-- Floating Arcade Decorations -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden" aria-hidden="true">
    <!-- Glowing orbs -->
    <div class="absolute top-20 right-20 w-72 h-72 rounded-full bg-neon-pink/10 blur-3xl"></div>
    <div class="absolute bottom-32 left-10 w-64 h-64 rounded-full bg-neon-purple/10 blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 w-48 h-48 rounded-full bg-neon-green/5 blur-2xl -translate-x-1/2"></div>

    <!-- Geometric shapes -->
    <div class="absolute top-32 left-[8%] w-0 h-0 border-l-[14px] border-l-transparent border-r-[14px] border-r-transparent border-b-[24px] border-b-neon-yellow/40 wobble"></div>
    <div class="absolute top-[40%] right-[5%] w-8 h-8 border-2 border-neon-pink/35 rounded-full pulse-drift"></div>
    <div class="absolute bottom-[30%] left-[6%] w-6 h-6 bg-neon-orange/30 rotate-45 float-rotate"></div>
    <div class="absolute top-[60%] right-[12%] w-0 h-0 border-l-[11px] border-l-transparent border-r-[11px] border-r-transparent border-b-[19px] border-b-neon-purple/35 drift-1"></div>
    <div class="absolute bottom-24 right-[8%] w-5 h-5 border-2 border-neon-green/40 rotate-45 sway"></div>

    <!-- Lightning bolt -->
    <svg class="absolute top-[25%] right-[4%] w-6 h-12 text-neon-yellow/40 drift-2" viewBox="0 0 24 48">
      <path d="M12 0 L4 20 L12 20 L8 48 L20 24 L12 24 Z" fill="currentColor"/>
    </svg>

    <!-- Squiggly line -->
    <svg class="absolute bottom-[40%] left-[3%] w-10 h-20 text-neon-pink/30 wobble" viewBox="0 0 40 80">
      <path d="M20 0 Q0 20 20 40 Q40 60 20 80" fill="none" stroke="currentColor" stroke-width="2"/>
    </svg>

    <!-- Concentric circles -->
    <div class="absolute top-[70%] left-[10%] drift-3">
      <div class="w-12 h-12 border-2 border-neon-purple/20 rounded-full spin-slow"></div>
      <div class="absolute top-2 left-2 w-8 h-8 border-2 border-neon-purple/30 rounded-full"></div>
    </div>

    <!-- Zigzag -->
    <svg class="absolute top-[15%] left-[15%] w-16 h-8 text-neon-orange/30 drift-slow" viewBox="0 0 64 32">
      <path d="M0 16 L16 0 L32 16 L48 0 L64 16" fill="none" stroke="currentColor" stroke-width="2"/>
    </svg>
  </div>

  <div class="max-w-6xl mx-auto relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 id="contact-heading" class="section-title">
        Get In <span class="gradient-text">Touch</span>
      </h2>
      <p class="section-subtitle mx-auto">
        Have a project in mind? Let's talk about how I can help.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Contact Info -->
      <div>
        <h3 class="text-2xl font-bold text-white mb-6">Let's Connect</h3>
        <p class="text-gray-400 mb-8">
          I'm currently open to new opportunities and interesting projects.
          Whether you have a question or just want to say hi, I'll do my best to
          get back to you!
        </p>

        <!-- Contact Details -->
        <div class="space-y-6 mb-8">
          <div class="flex items-start gap-4">
            <div
              class="w-12 h-12 rounded-xl bg-neon-cyan/10 flex items-center justify-center shrink-0"
            >
              <svg
                class="w-6 h-6 text-neon-cyan"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <div>
              <p class="text-gray-400 text-sm">Email</p>
              <a
                href={`mailto:${email}`}
                class="text-white hover:text-neon-cyan transition-colors"
              >
                {email}
              </a>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div
              class="w-12 h-12 rounded-xl bg-neon-purple/10 flex items-center justify-center shrink-0"
            >
              <svg
                class="w-6 h-6 text-neon-purple"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
            </div>
            <div>
              <p class="text-gray-400 text-sm">Phone</p>
              <a
                href={`tel:${phone.replace(/[^0-9]/g, '')}`}
                class="text-white hover:text-neon-cyan transition-colors"
              >
                {phone}
              </a>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div
              class="w-12 h-12 rounded-xl bg-neon-pink/10 flex items-center justify-center shrink-0"
            >
              <svg
                class="w-6 h-6 text-neon-pink"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <p class="text-gray-400 text-sm">Location</p>
              <p class="text-white">{profile.location}</p>
            </div>
          </div>
        </div>

        <!-- Social Links -->
        <div class="flex gap-4">
          <a
            href={profile.social.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="w-12 h-12 rounded-xl bg-neon-pink/10 border border-neon-pink/20 flex items-center justify-center text-gray-400 hover:bg-neon-pink/20 hover:text-neon-pink hover:border-neon-pink/40 transition-all"
            aria-label="Connect on LinkedIn"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>

          <a
            href={profile.social.github}
            target="_blank"
            rel="noopener noreferrer"
            class="w-12 h-12 rounded-xl bg-neon-purple/10 border border-neon-purple/20 flex items-center justify-center text-gray-400 hover:bg-neon-purple/20 hover:text-neon-purple hover:border-neon-purple/40 transition-all"
            aria-label="Follow on GitHub"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="card">
        <h3 class="text-xl font-bold text-white mb-6">Send a Message</h3>
        <ContactForm client:visible />
      </div>
    </div>
  </div>
</section>
