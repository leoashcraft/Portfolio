---
import { experience, education } from '../../data/experience';
import { site } from '../../data/site';
import SectionHeader from '../common/SectionHeader.astro';
import ArcadeDecorations from '../common/ArcadeDecorations.astro';
import Icon from '../ui/Icon.astro';
---

<section id="experience" class="section section-arcade-alt px-4 overflow-hidden" aria-labelledby="experience-heading">
  <!-- Neon Top Border -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-neon-pink/50 to-transparent"></div>

  <!-- Floating Arcade Decorations -->
  <ArcadeDecorations variant="experience" />

  <div class="max-w-6xl mx-auto relative z-10">
    <!-- Section Header -->
    <SectionHeader
      title={site.sections.experience.title}
      titleHighlight={site.sections.experience.titleHighlight}
      subtitle={site.sections.experience.subtitle}
      headingId="experience-heading"
    />

    <!-- Experience Timeline -->
    <div class="relative">
      <!-- Timeline Line (hidden below 768px, right side 768-1024px, centered 1024px+) -->
      <div
        id="timeline-line"
        class="hidden md:block absolute right-4 md:left-auto lg:left-1/2 lg:right-auto top-0 w-0.5 lg:-translate-x-1/2 timeline-gradient transition-all duration-500 ease-out"
        style="height: 0px;"
        aria-hidden="true"
      ></div>

      <!-- Eyes Traveler (separate container for z-index control) -->
      <div
        id="timeline-eyes"
        class="hidden md:block absolute right-4 md:left-auto lg:left-1/2 lg:right-auto top-0 bottom-0 w-0.5 lg:-translate-x-1/2 z-20 pointer-events-none transition-opacity duration-500"
        style="opacity: 0;"
        aria-hidden="true"
      >
        <div class="absolute left-1/2 timeline-traveler text-[1.81rem] look-left" style="filter: drop-shadow(0 0 8px rgba(255, 0, 255, 0.8));">
          <span class="eyes-blink">ðŸ‘€</span>
        </div>
      </div>

      <!-- Experience Items -->
      <div class="space-y-12">
        {
          experience.map((exp, index) => (
            <div
              class={`experience-card relative flex flex-col lg:flex-row gap-8 ${
                index % 2 === 0 ? 'lg:flex-row-reverse slide-from-right' : 'slide-from-left'
              }`}
            >
              {/* Timeline Dot (hidden below 768px, right side 768-1024px, centered 1024px+) */}
              <div
                class="hidden md:block absolute right-[9px] md:left-auto lg:left-1/2 lg:right-auto top-1/2 -translate-y-1/2 lg:-translate-x-1/2 w-4 h-4 rounded-full bg-neon-pink border-4 border-night-900 z-10 timeline-dot"
                aria-hidden="true"
              />

              {/* Content */}
              <div
                class={`md:pr-12 lg:pr-0 lg:w-1/2 ${
                  index % 2 === 0 ? 'lg:pl-6' : 'lg:pr-6'
                }`}
              >
                <div class="card">
                  {/* Header */}
                  <div class="flex flex-wrap items-start justify-between gap-4 mb-4">
                    <div>
                      <p class="text-xl font-bold text-white">{exp.position}</p>
                      <p class="font-medium" style="color: #22CBCC;">{exp.company}</p>
                    </div>
                    <span class="text-sm text-gray-400 bg-night-700 px-3 py-1 rounded-full">
                      {exp.period}
                    </span>
                  </div>

                  {/* Location */}
                  {exp.location && (
                    <p class="text-gray-400 text-sm mb-4 flex items-center gap-2">
                      <svg
                        class="w-4 h-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                        />
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                        />
                      </svg>
                      {exp.location}
                    </p>
                  )}

                  {/* Highlights */}
                  <ul class="space-y-2">
                    {exp.highlights.map((highlight) => (
                      <li class="flex items-start gap-3 text-gray-300 text-sm">
                        <svg
                          class="w-5 h-5 text-neon-green shrink-0 mt-0.5"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                          />
                        </svg>
                        <span>{highlight}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>

              {/* Spacer for opposite side */}
              <div class="hidden md:block md:w-1/2" />
            </div>
          ))
        }
      </div>
    </div>

    <!-- Education Section -->
    <div class="education-section mt-20">
      <h3 class="subsection-title education-title text-2xl font-bold text-white text-center mb-8">
        {site.sections.experience.educationTitle} <span class="gradient-text">{site.sections.experience.educationTitleHighlight}</span>
      </h3>

      <div class="education-grid max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          education.map((edu, index) => (
            <div class={`card relative edu-card edu-card-${index}`}
              <span class="absolute top-4 right-4 text-sm text-gray-400 bg-night-700 px-3 py-1 rounded-full year-counter" data-target-year={edu.year}>
                2000
              </span>
              <div class="pr-20 mb-4">
                <p class="text-lg font-bold text-white">{edu.degree}</p>
                <p class="text-neon-yellow">{edu.institution}</p>
              </div>

              <p class="text-gray-400 text-sm mb-4">{edu.description}</p>

              <div class="flex flex-wrap items-center gap-2">
                {edu.skills.map((skill) => (
                  <span class="px-3 py-1 text-xs bg-neon-pink/10 text-neon-pink rounded-full border border-neon-pink/20">
                    {skill}
                  </span>
                ))}
                {edu.credentialUrl && (
                  <a
                    href={edu.credentialUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="ml-auto inline-flex items-center gap-1 text-sm text-neon-cyan hover:text-neon-cyan/80 transition-colors"
                  >
                    View Credential
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  /* Experience card slide animations */
  .experience-card {
    opacity: 0;
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .experience-card.slide-from-left {
    transform: translateX(-100px);
  }

  .experience-card.slide-from-right {
    transform: translateX(100px);
  }

  .experience-card.slide-in {
    opacity: 1;
    transform: translateX(0);
  }

  /* Disable animations when preference set */
  [data-animations="disabled"] .experience-card {
    opacity: 1 !important;
    transform: none !important;
    transition: none !important;
  }

  [data-animations="disabled"] #timeline-line {
    height: 100% !important;
    transition: none !important;
  }

  [data-animations="disabled"] #timeline-eyes {
    opacity: 1 !important;
    transition: none !important;
  }

  /* Education title animation */
  .education-title {
    opacity: 0;
    transition: opacity 0.3s ease-out;
  }

  .education-title.visible {
    opacity: 1;
  }

  /* Wave letter transitions */
  .education-title .wave-letter {
    transition: transform 0.1s ease-out, filter 0.1s ease-out;
  }

  /* Education cards diagonal grow from center */
  .edu-card {
    opacity: 0;
    transform: scale(0.8);
    transition: opacity 0.5s ease-out, transform 0.5s ease-out;
  }

  /* Each card starts positioned toward center */
  .edu-card-0 {
    transform: scale(0.8) translate(30px, 30px);
  }

  .edu-card-1 {
    transform: scale(0.8) translate(-30px, 30px);
  }

  .edu-card-2 {
    transform: scale(0.8) translate(30px, -30px);
  }

  .edu-card-3 {
    transform: scale(0.8) translate(-30px, -30px);
  }

  /* Grow out to final position */
  .education-grid.cards-in .edu-card {
    opacity: 1;
    transform: scale(1) translate(0, 0);
  }

  /* Stagger the animations */
  .edu-card-0 { transition-delay: 0s; }
  .edu-card-1 { transition-delay: 0.1s; }
  .edu-card-2 { transition-delay: 0.2s; }
  .edu-card-3 { transition-delay: 0.3s; }

  /* Disable animations when preference set */
  [data-animations="disabled"] .education-title,
  [data-animations="disabled"] .edu-card {
    opacity: 1 !important;
    transform: none !important;
    transition: none !important;
  }
</style>

<script>
  import { initTimelineEyes } from '../../lib/timeline-eyes';
  import { initSectionParallax } from '../../lib/parallax';
  import { initScrollWave } from '../../lib/scroll-wave';

  let cleanup: (() => void) | undefined;
  let slideCleanup: (() => void) | undefined;
  let waveCleanup: (() => void) | undefined;

  function initExperienceSlides() {
    const cards = document.querySelectorAll('.experience-card') as NodeListOf<HTMLElement>;
    const timelineLine = document.getElementById('timeline-line');
    const timelineEyes = document.getElementById('timeline-eyes');
    const timelineContainer = document.querySelector('#experience .relative') as HTMLElement;

    // Skip if animations disabled
    if (document.documentElement.getAttribute('data-animations') === 'disabled') {
      cards.forEach((card) => card.classList.add('slide-in'));
      if (timelineLine) timelineLine.style.height = '100%';
      return () => {};
    }

    let ticking = false;

    const updateTimeline = () => {
      if (!timelineLine || !timelineContainer) return;

      // Find the last visible card
      let lastVisibleCard: HTMLElement | null = null;
      cards.forEach((card) => {
        if (card.classList.contains('slide-in')) {
          lastVisibleCard = card;
        }
      });

      if (lastVisibleCard) {
        const containerRect = timelineContainer.getBoundingClientRect();
        const cardRect = lastVisibleCard.getBoundingClientRect();
        // Calculate height from container top to card center
        const height = (cardRect.top + cardRect.height / 2) - containerRect.top;
        timelineLine.style.height = `${Math.max(0, height)}px`;

        // Show eyes if we have visible cards
        if (timelineEyes) timelineEyes.style.opacity = '1';
      } else {
        timelineLine.style.height = '0px';
        // Hide eyes if no cards visible
        if (timelineEyes) timelineEyes.style.opacity = '0';
      }
    };

    const checkCards = () => {
      const viewportHeight = window.innerHeight;
      const triggerPoint = viewportHeight * 0.85; // Slide in when card is 85% down the viewport
      const exitPoint = viewportHeight * 0.5; // Slide out when card top goes below 50% of viewport

      cards.forEach((card) => {
        const rect = card.getBoundingClientRect();

        // Card should be visible when its top is above the trigger point
        if (rect.top < triggerPoint) {
          card.classList.add('slide-in');
        }

        // Card should slide out when scrolling up and card top goes below exit point
        if (rect.top > exitPoint) {
          card.classList.remove('slide-in');
        }
      });

      updateTimeline();
      ticking = false;
    };

    const handleScroll = () => {
      if (!ticking) {
        requestAnimationFrame(checkCards);
        ticking = true;
      }
    };

    window.addEventListener('scroll', handleScroll, { passive: true });
    checkCards(); // Initial check

    return () => {
      window.removeEventListener('scroll', handleScroll);
    };
  }

  function init() {
    cleanup?.();
    slideCleanup?.();
    waveCleanup?.();
    cleanup = initTimelineEyes();
    slideCleanup = initExperienceSlides();
    waveCleanup = initScrollWave({
      selector: '.education-title',
      waveStart: 0.75,
      waveEnd: 0.35
    });
    initSectionParallax('experience');
  }

  init();
  document.addEventListener('astro:after-swap', init);

  // Re-init slides and eyes when animations toggle changes
  window.addEventListener('animations-change', () => {
    cleanup?.();
    slideCleanup?.();
    waveCleanup?.();
    cleanup = initTimelineEyes();
    slideCleanup = initExperienceSlides();
    waveCleanup = initScrollWave({
      selector: '.education-title',
      waveStart: 0.75,
      waveEnd: 0.35
    });
  });

  // Re-init eyes when theme changes (high contrast may affect layout)
  window.addEventListener('theme-change', () => {
    cleanup?.();
    cleanup = initTimelineEyes();
  });

  // Year counter animation
  function initYearCounters(skipInitialInView = false) {
    const counters = document.querySelectorAll('.year-counter');
    const animatedCounters = new Set<Element>();
    const wasOutOfView = new Set<Element>();
    const pendingTimeouts: number[] = [];

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (!entry.isIntersecting) {
          // Track when element leaves viewport
          wasOutOfView.add(entry.target);
        } else if (entry.isIntersecting && !animatedCounters.has(entry.target)) {
          // Only animate if element was out of view first (or not skipping initial)
          if (!skipInitialInView || wasOutOfView.has(entry.target)) {
            animatedCounters.add(entry.target);
            const target = entry.target as HTMLElement;
            const targetYear = parseInt(target.dataset.targetYear || '2000', 10);
            // 1 second delay before starting animation
            const timeoutId = window.setTimeout(() => {
              animateCounter(target, 2000, targetYear);
            }, 1000);
            pendingTimeouts.push(timeoutId);
          }
        }
      });
    }, { threshold: 0.5 });

    counters.forEach((counter) => {
      // Reset to 2000 for re-initialization
      counter.textContent = '2000';
      observer.observe(counter);
    });

    return () => {
      observer.disconnect();
      animatedCounters.clear();
      wasOutOfView.clear();
      pendingTimeouts.forEach((id) => clearTimeout(id));
      pendingTimeouts.length = 0;
    };
  }

  function animateCounter(element: HTMLElement, start: number, end: number) {
    const duration = 1500; // 1.5 seconds
    const startTime = performance.now();
    const range = end - start;

    function update(currentTime: number) {
      const elapsed = currentTime - startTime;
      const progress = Math.min(elapsed / duration, 1);

      // Easing function for smooth deceleration
      const easeOut = 1 - Math.pow(1 - progress, 3);
      const current = Math.round(start + range * easeOut);

      element.textContent = current.toString();

      if (progress < 1) {
        requestAnimationFrame(update);
      }
    }

    requestAnimationFrame(update);
  }

  let yearCleanup: (() => void) | undefined;

  function initYears() {
    yearCleanup?.();
    yearCleanup = initYearCounters();
  }

  function resetYearCounters() {
    yearCleanup?.();
    // Reset all counters to 2000
    document.querySelectorAll('.year-counter').forEach((counter) => {
      counter.textContent = '2000';
    });
    // Re-init but skip animating elements already in view - wait for them to scroll out and back in
    yearCleanup = initYearCounters(true);
  }

  initYears();
  document.addEventListener('astro:after-swap', initYears);

  // Reset on nav link clicks and back-to-top button
  document.querySelectorAll('nav a[href^="#"], .back-to-top, a[href="#home"]').forEach((link) => {
    link.addEventListener('click', resetYearCounters);
  });

  // Education cards diagonal grow animation
  let eduCleanup: (() => void) | undefined;

  function initEducationCards() {
    const eduSection = document.querySelector('.education-section') as HTMLElement;
    const eduGrid = document.querySelector('.education-grid') as HTMLElement;
    if (!eduSection || !eduGrid) return () => {};

    // Skip if animations disabled
    if (document.documentElement.getAttribute('data-animations') === 'disabled') {
      eduSection.classList.add('visible');
      eduGrid.classList.add('cards-in');
      return () => {};
    }

    let ticking = false;

    const checkEducation = () => {
      const viewportHeight = window.innerHeight;
      const titleTrigger = viewportHeight * 0.7;
      const cardsTrigger = viewportHeight * 0.5;
      const exitPoint = viewportHeight * 0.8;

      const sectionRect = eduSection.getBoundingClientRect();
      const gridRect = eduGrid.getBoundingClientRect();

      // Title fades in first
      if (sectionRect.top < titleTrigger) {
        eduSection.classList.add('visible');
      }

      // Cards grow after title
      if (gridRect.top < cardsTrigger) {
        eduGrid.classList.add('cards-in');
      }

      // Reset when scrolling up
      if (sectionRect.top > exitPoint) {
        eduSection.classList.remove('visible');
        eduGrid.classList.remove('cards-in');
      }

      ticking = false;
    };

    const handleScroll = () => {
      if (!ticking) {
        requestAnimationFrame(checkEducation);
        ticking = true;
      }
    };

    window.addEventListener('scroll', handleScroll, { passive: true });
    checkEducation();

    return () => {
      window.removeEventListener('scroll', handleScroll);
    };
  }

  function initEdu() {
    eduCleanup?.();
    eduCleanup = initEducationCards();
  }

  initEdu();
  document.addEventListener('astro:after-swap', initEdu);

  window.addEventListener('animations-change', () => {
    eduCleanup?.();
    eduCleanup = initEducationCards();
  });
</script>
