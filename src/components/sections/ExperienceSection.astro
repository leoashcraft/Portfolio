---
import { experience, education } from '../../data/experience';
import { site } from '../../data/site';
---

<section id="experience" class="section section-arcade-alt px-4 overflow-hidden" aria-labelledby="experience-heading">
  <!-- Neon Top Border -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-neon-pink/50 to-transparent"></div>

  <!-- Floating Arcade Decorations -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden" aria-hidden="true">
    <!-- Glowing orbs -->
    <div class="absolute top-32 right-10 w-72 h-72 rounded-full bg-neon-purple/8 blur-3xl"></div>
    <div class="absolute bottom-20 left-20 w-64 h-64 rounded-full bg-neon-green/5 blur-3xl"></div>
    <div class="absolute top-1/2 right-1/4 w-40 h-40 rounded-full bg-neon-orange/5 blur-2xl"></div>

    <!-- Geometric shapes -->
    <div class="absolute top-24 left-[10%] w-0 h-0 border-l-[12px] border-l-transparent border-r-[12px] border-r-transparent border-b-[20px] border-b-neon-yellow/40 drift-2"></div>
    <div class="absolute top-[35%] right-[6%] w-7 h-7 border-2 border-neon-pink/40 rounded-full pulse-drift"></div>
    <div class="absolute bottom-[30%] left-[5%] w-5 h-5 bg-neon-purple/30 rotate-45 drift-1"></div>
    <div class="absolute top-[70%] right-[12%] w-6 h-6 border-2 border-neon-green/30 rotate-45 drift-3"></div>
    <div class="absolute bottom-24 right-[20%] w-0 h-0 border-l-[10px] border-l-transparent border-r-[10px] border-r-transparent border-b-[17px] border-b-neon-orange/35 drift-diagonal"></div>

    <!-- Squiggly line -->
    <svg class="absolute top-[45%] right-[3%] w-12 h-20 text-neon-pink/30 drift-slow" viewBox="0 0 48 80">
      <path d="M24 0 Q0 20 24 40 Q48 60 24 80" fill="none" stroke="currentColor" stroke-width="2"/>
    </svg>

    <!-- Double circles -->
    <div class="absolute bottom-[50%] left-[4%] w-10 h-10 border-2 border-neon-yellow/25 rounded-full drift-2 spin-slow"></div>
    <div class="absolute bottom-[48%] left-[5%] w-6 h-6 border-2 border-neon-yellow/35 rounded-full drift-2"></div>
  </div>

  <div class="max-w-6xl mx-auto relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 id="experience-heading" class="section-title">
        {site.sections.experience.title} <span class="gradient-text">{site.sections.experience.titleHighlight}</span>
      </h2>
      <p class="section-subtitle mx-auto">
        {site.sections.experience.subtitle}
      </p>
    </div>

    <!-- Experience Timeline -->
    <div class="relative">
      <!-- Timeline Line (hidden on mobile) -->
      <div
        class="hidden md:block absolute left-0 md:left-1/2 top-0 bottom-0 w-0.5 md:-translate-x-1/2 timeline-gradient"
        aria-hidden="true"
      >
        <!-- Code Brackets Traveler -->
        <div class="absolute left-1/2 -translate-x-1/2 timeline-traveler" style="filter: drop-shadow(0 0 8px rgba(255, 0, 255, 0.8));">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="text-neon-pink">
            <!-- Code brackets </> -->
            <path d="M8 6L2 12L8 18" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M16 6L22 12L16 18" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <!-- Terminal Cursor Traveler -->
        <div class="absolute left-1/2 -translate-x-1/2 timeline-traveler" style="animation-delay: -10s; filter: drop-shadow(0 0 8px rgba(0, 255, 247, 0.8));">
          <svg width="22" height="22" viewBox="0 0 24 24" fill="none" class="text-neon-cyan">
            <!-- Terminal prompt -->
            <path d="M4 17L10 11L4 5" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M12 19H20" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
          </svg>
        </div>
      </div>

      <!-- Experience Items -->
      <div class="space-y-12">
        {
          experience.map((exp, index) => (
            <div
              class={`relative flex flex-col md:flex-row gap-8 ${
                index % 2 === 0 ? 'md:flex-row-reverse' : ''
              }`}
            >
              {/* Timeline Dot (hidden on mobile) */}
              <div
                class="hidden md:block absolute left-0 md:left-1/2 w-4 h-4 rounded-full bg-neon-pink border-4 border-night-900 md:-translate-x-1/2 z-10 timeline-dot"
                aria-hidden="true"
              />

              {/* Content */}
              <div
                class={`md:w-1/2 ${
                  index % 2 === 0 ? 'md:pl-6' : 'md:pr-6'
                }`}
              >
                <div class="card">
                  {/* Header */}
                  <div class="flex flex-wrap items-start justify-between gap-4 mb-4">
                    <div>
                      <h3 class="text-xl font-bold text-white">{exp.position}</h3>
                      <p class="text-neon-pink font-medium">{exp.company}</p>
                    </div>
                    <span class="text-sm text-gray-400 bg-night-700 px-3 py-1 rounded-full">
                      {exp.period}
                    </span>
                  </div>

                  {/* Location */}
                  {exp.location && (
                    <p class="text-gray-400 text-sm mb-4 flex items-center gap-2">
                      <svg
                        class="w-4 h-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                        />
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                        />
                      </svg>
                      {exp.location}
                    </p>
                  )}

                  {/* Highlights */}
                  <ul class="space-y-2">
                    {exp.highlights.map((highlight) => (
                      <li class="flex items-start gap-3 text-gray-300 text-sm">
                        <svg
                          class="w-5 h-5 text-neon-green shrink-0 mt-0.5"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                          />
                        </svg>
                        <span>{highlight}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>

              {/* Spacer for opposite side */}
              <div class="hidden md:block md:w-1/2" />
            </div>
          ))
        }
      </div>
    </div>

    <!-- Education Section -->
    <div class="mt-20">
      <h3 class="text-2xl font-bold text-white text-center mb-8">
        {site.sections.experience.educationTitle} <span class="gradient-text">{site.sections.experience.educationTitleHighlight}</span>
      </h3>

      <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          education.map((edu) => (
            <div class="card">
              <div class="flex flex-wrap items-start justify-between gap-4 mb-4">
                <div>
                  <h4 class="text-lg font-bold text-white">{edu.degree}</h4>
                  <p class="text-neon-yellow">{edu.institution}</p>
                </div>
                <span class="text-sm text-gray-400 bg-night-700 px-3 py-1 rounded-full">
                  {edu.year}
                </span>
              </div>

              <p class="text-gray-400 text-sm mb-4">{edu.description}</p>

              <div class="flex flex-wrap items-center gap-2">
                {edu.skills.map((skill) => (
                  <span class="px-3 py-1 text-xs bg-neon-pink/10 text-neon-pink rounded-full border border-neon-pink/20">
                    {skill}
                  </span>
                ))}
                {edu.credentialUrl && (
                  <a
                    href={edu.credentialUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="ml-auto inline-flex items-center gap-1 text-sm text-neon-cyan hover:text-neon-cyan/80 transition-colors"
                  >
                    View Credential
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
