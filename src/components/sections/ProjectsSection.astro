---
import { featuredProjects, otherProjects } from '../../data/projects';
import { site } from '../../data/site';
import SectionHeader from '../common/SectionHeader.astro';
import Icon from '../ui/Icon.astro';
---

<section id="projects" class="section section-arcade px-4 overflow-hidden" aria-labelledby="projects-heading">
  <!-- Neon Top Border -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-neon-purple/50 to-transparent"></div>

  <!-- Floating Arcade Decorations -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden" aria-hidden="true">
    <!-- Glowing orbs -->
    <div class="absolute top-40 left-10 w-80 h-80 rounded-full bg-neon-pink/8 blur-3xl"></div>
    <div class="absolute bottom-60 right-10 w-72 h-72 rounded-full bg-neon-purple/10 blur-3xl"></div>
    <div class="absolute top-1/3 right-1/3 w-56 h-56 rounded-full bg-neon-yellow/5 blur-3xl"></div>
    <div class="absolute bottom-20 left-1/4 w-48 h-48 rounded-full bg-neon-orange/5 blur-2xl"></div>

    <!-- Geometric shapes - scattered throughout -->
    <div class="absolute top-28 right-[8%] w-0 h-0 border-l-[14px] border-l-transparent border-r-[14px] border-r-transparent border-b-[24px] border-b-neon-pink/35 wobble"></div>
    <div class="absolute top-[25%] left-[5%] w-8 h-8 border-2 border-neon-yellow/40 rounded-full drift-1 spin-slow"></div>
    <div class="absolute top-[45%] right-[4%] w-6 h-6 bg-neon-green/25 rotate-45 float-rotate"></div>
    <div class="absolute bottom-[35%] left-[7%] w-7 h-7 border-2 border-neon-purple/35 rotate-45 sway"></div>
    <div class="absolute top-[65%] right-[10%] w-0 h-0 border-l-[10px] border-l-transparent border-r-[10px] border-r-transparent border-b-[17px] border-b-neon-orange/40 drift-2"></div>
    <div class="absolute bottom-28 left-[15%] w-5 h-5 border-2 border-neon-pink/30 rounded-full pulse-drift"></div>

    <!-- Zigzag patterns -->
    <svg class="absolute top-[20%] left-[2%] w-20 h-10 text-neon-purple/30 drift-slow" viewBox="0 0 80 40">
      <path d="M0 20 L20 0 L40 20 L60 0 L80 20" fill="none" stroke="currentColor" stroke-width="2"/>
    </svg>
    <svg class="absolute bottom-[25%] right-[3%] w-16 h-8 text-neon-yellow/25 sway" viewBox="0 0 64 32">
      <path d="M0 16 L16 0 L32 16 L48 0 L64 16" fill="none" stroke="currentColor" stroke-width="2"/>
    </svg>

    <!-- Squiggly lines -->
    <svg class="absolute top-[55%] left-[3%] w-8 h-16 text-neon-green/30 wobble" viewBox="0 0 32 64">
      <path d="M16 0 Q0 16 16 32 Q32 48 16 64" fill="none" stroke="currentColor" stroke-width="2"/>
    </svg>

    <!-- Concentric circles -->
    <div class="absolute top-[75%] right-[6%] drift-3">
      <div class="w-14 h-14 border-2 border-neon-pink/20 rounded-full spin-slow"></div>
      <div class="absolute top-2 left-2 w-10 h-10 border-2 border-neon-pink/30 rounded-full"></div>
      <div class="absolute top-4 left-4 w-6 h-6 border-2 border-neon-pink/40 rounded-full"></div>
    </div>
  </div>

  <div class="max-w-6xl mx-auto relative z-10">
    <!-- Section Header -->
    <SectionHeader
      title={site.sections.projects.title}
      titleHighlight={site.sections.projects.titleHighlight}
      subtitle={site.sections.projects.subtitle}
      headingId="projects-heading"
    />

    <!-- Featured Projects -->
    <div class="space-y-20 mb-20">
      {
        featuredProjects.map((project, index) => (
          <div
            class={`flex flex-col lg:flex-row gap-8 items-center ${
              index % 2 === 1 ? 'lg:flex-row-reverse' : ''
            }`}
          >
            {/* Image */}
            <div class="lg:w-1/2">
              <div class="relative group project-image-wrapper">
                <div class="absolute inset-0 bg-gradient-to-r from-neon-pink/20 to-neon-purple/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
                <div class="relative rounded-2xl overflow-hidden border border-neon-pink/20 group-hover:border-neon-pink/40 transition-colors">
                  <img
                    src={project.image}
                    alt={project.title}
                    class="w-full h-auto object-cover"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-night-900/90 via-night-900/20 to-transparent" />
                </div>
              </div>
            </div>

            {/* Content */}
            <div class="lg:w-1/2">
              <span class="text-neon-pink text-sm font-mono mb-2 block glow-text-pink">
                
              </span>
              <h3 class="text-2xl font-bold text-white mb-4">{project.title}</h3>
              <div class="glass p-6 mb-6">
                <p class="text-gray-300">{project.description}</p>
              </div>

              {/* Metrics */}
              <div class="flex flex-wrap gap-3 mb-6">
                {project.metrics.map((metric) => (
                  <span class="flex items-center gap-2 text-sm text-neon-green">
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
                      />
                    </svg>
                    {metric}
                  </span>
                ))}
              </div>

              {/* Tags */}
              <div class="flex flex-wrap gap-2 mb-6">
                {project.tags.map((tag) => (
                  <span class="px-3 py-1 text-sm bg-night-700 text-gray-300 rounded-full">
                    {tag}
                  </span>
                ))}
              </div>

              {/* Links */}
              <div class="flex gap-4">
                {project.github && (
                  <a
                    href={project.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="btn btn-ghost"
                    aria-label={`View ${project.title} on GitHub`}
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                    </svg>
                    Code
                  </a>
                )}
                {project.subProjects && project.subProjects.length > 0 ? (
                  <button
                    type="button"
                    class="btn btn-primary"
                    data-modal-trigger={`modal-${index}`}
                    aria-label={`View ${project.title} sites`}
                  >
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"
                      />
                    </svg>
                    View Sites
                  </button>
                ) : project.live && (
                  <a
                    href={project.live}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="btn btn-primary"
                    aria-label={`Visit ${project.title} live site`}
                  >
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                      />
                    </svg>
                    Live Site
                  </a>
                )}
              </div>
            </div>
          </div>
        ))
      }
    </div>

    {/* Sub-Projects Modals */}
    {
      featuredProjects.map((project, index) => (
        project.subProjects && project.subProjects.length > 0 && (
          <div
            id={`modal-${index}`}
            class="fixed inset-0 z-50 hidden items-center justify-center p-4"
            role="dialog"
            aria-modal="true"
            aria-labelledby={`modal-title-${index}`}
          >
            {/* Backdrop */}
            <div class="absolute inset-0 bg-night-900/90 backdrop-blur-sm" data-modal-backdrop />

            {/* Modal Content */}
            <div class="relative w-full max-w-5xl max-h-[90vh] overflow-y-auto rounded-2xl border border-neon-pink/30 bg-night-800/95 p-6 md:p-8 shadow-2xl">
              {/* Close Button */}
              <button
                type="button"
                class="absolute top-4 right-4 w-10 h-10 rounded-full bg-night-700 border border-neon-pink/20 flex items-center justify-center text-gray-400 hover:text-neon-pink hover:border-neon-pink/40 transition-colors"
                data-modal-close
                aria-label="Close modal"
              >
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>

              {/* Modal Header */}
              <h3 id={`modal-title-${index}`} class="text-2xl font-bold text-white mb-2">
                {project.title}
              </h3>
              <p class="text-gray-400 mb-8">Select a project to view</p>

              {/* Sub-Projects Grid - 4 cols desktop, 2 cols tablet, 1 col mobile */}
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                {project.subProjects.map((subProject) => (
                  <a
                    href={subProject.live}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group block rounded-xl border border-neon-purple/20 bg-night-700/50 overflow-hidden hover:border-neon-pink/40 transition-all hover:shadow-lg hover:shadow-neon-pink/10"
                  >
                    {/* Sub-Project Image */}
                    <div class="aspect-video overflow-hidden">
                      <img
                        src={subProject.image}
                        alt={subProject.title}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                        loading="lazy"
                      />
                    </div>
                    {/* Sub-Project Content */}
                    <div class="p-4">
                      <h4 class="font-semibold text-white group-hover:text-neon-pink transition-colors mb-1">
                        {subProject.title}
                      </h4>
                      <p class="text-sm text-gray-400 line-clamp-2">
                        {subProject.description}
                      </p>
                      <div class="mt-3 flex items-center gap-1 text-sm text-neon-cyan">
                        <span>Visit</span>
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                        </svg>
                      </div>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          </div>
        )
      ))
    }

    <!-- Other Projects -->
    <div>
      <h3 class="text-2xl font-bold text-white text-center mb-8">
        {site.sections.projects.otherTitle} <span class="gradient-text">{site.sections.projects.otherTitleHighlight}</span>
      </h3>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          otherProjects.map((project) => (
            <div class="card card-highlighted group">
              {/* Header */}
              <div class="flex items-start justify-between mb-4">
                <div class="project-icon w-12 h-12 rounded-xl bg-neon-pink/10 border border-neon-pink/20 flex items-center justify-center">
                  <svg
                    class="w-6 h-6 text-neon-pink"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"
                    />
                  </svg>
                </div>
                <div class="flex gap-3">
                  {project.github && (
                    <a
                      href={project.github}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-gray-400 hover:text-neon-pink transition-colors"
                      aria-label={`View ${project.title} on GitHub`}
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                      </svg>
                    </a>
                  )}
                  {project.live && (
                    <a
                      href={project.live}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-gray-400 hover:text-neon-yellow transition-colors"
                      aria-label={`Visit ${project.title}`}
                    >
                      <svg
                        class="w-5 h-5"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                        />
                      </svg>
                    </a>
                  )}
                </div>
              </div>

              {/* Content */}
              <h4 class="text-lg font-semibold text-white mb-2 group-hover:text-neon-pink transition-colors">
                {project.title}
              </h4>
              <p class="text-gray-400 text-sm mb-4">{project.description}</p>

              {/* Tags */}
              <div class="flex flex-wrap gap-2 mt-auto">
                {project.tags.slice(0, 3).map((tag) => (
                  <span class="text-xs text-gray-500">{tag}</span>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<script>
  function initProjectModals() {
    // Open modal on trigger click
    document.querySelectorAll('[data-modal-trigger]').forEach((trigger) => {
      trigger.addEventListener('click', () => {
        const modalId = trigger.getAttribute('data-modal-trigger');
        const modal = document.getElementById(modalId || '');
        if (modal) {
          modal.classList.remove('hidden');
          modal.classList.add('flex');
          document.body.style.overflow = 'hidden';
        }
      });
    });

    // Close modal on close button click
    document.querySelectorAll('[data-modal-close]').forEach((closeBtn) => {
      closeBtn.addEventListener('click', () => {
        const modal = closeBtn.closest('[role="dialog"]');
        if (modal) {
          modal.classList.add('hidden');
          modal.classList.remove('flex');
          document.body.style.overflow = '';
        }
      });
    });

    // Close modal on backdrop click
    document.querySelectorAll('[data-modal-backdrop]').forEach((backdrop) => {
      backdrop.addEventListener('click', () => {
        const modal = backdrop.closest('[role="dialog"]');
        if (modal) {
          modal.classList.add('hidden');
          modal.classList.remove('flex');
          document.body.style.overflow = '';
        }
      });
    });

    // Close modal on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        const openModal = document.querySelector('[role="dialog"]:not(.hidden)');
        if (openModal) {
          openModal.classList.add('hidden');
          openModal.classList.remove('flex');
          document.body.style.overflow = '';
        }
      }
    });
  }

  initProjectModals();
  document.addEventListener('astro:after-swap', initProjectModals);

  // Project icon flip animation (same as service icons)
  function initProjectIconFlips() {
    const icons = document.querySelectorAll('.project-icon') as NodeListOf<HTMLElement>;
    if (icons.length === 0) return;

    const hoverStates = new Map<HTMLElement, boolean>();

    // Handle hover on parent card - flip and stay flipped
    icons.forEach((icon) => {
      hoverStates.set(icon, false);
      const parentCard = icon.closest('.card');

      if (parentCard) {
        parentCard.addEventListener('mouseenter', () => {
          hoverStates.set(icon, true);
          icon.classList.add('flipped');
        });

        parentCard.addEventListener('mouseleave', () => {
          hoverStates.set(icon, false);
          icon.classList.remove('flipped');
        });
      }
    });

    // Random flip function
    function randomFlip() {
      // Pick a random icon
      const iconsArray = Array.from(icons);
      const randomIndex = Math.floor(Math.random() * iconsArray.length);
      const icon = iconsArray[randomIndex];

      // Don't flip if user is hovering
      if (hoverStates.get(icon)) {
        scheduleNextFlip();
        return;
      }

      // Flip it
      icon.classList.add('flipped');

      // Wait 2.5 seconds then flip back (if not hovered)
      setTimeout(() => {
        if (!hoverStates.get(icon)) {
          icon.classList.remove('flipped');
        }
      }, 2500);

      scheduleNextFlip();
    }

    function scheduleNextFlip() {
      // Random delay between 3-7 seconds
      const delay = 3000 + Math.random() * 4000;
      setTimeout(randomFlip, delay);
    }

    // Start the random flipping after a short delay
    setTimeout(randomFlip, 2000);
  }

  initProjectIconFlips();
  document.addEventListener('astro:after-swap', initProjectIconFlips);
</script>
