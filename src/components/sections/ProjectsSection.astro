---
import { featuredProjects, otherProjects } from '../../data/projects';
import { site } from '../../data/site';
import SectionHeader from '../common/SectionHeader.astro';
import ArcadeDecorations from '../common/ArcadeDecorations.astro';
import Icon from '../ui/Icon.astro';
---

<section id="projects" class="section section-arcade" aria-labelledby="projects-heading">
  <!-- Neon Top Border -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-neon-purple/50 to-transparent"></div>

  <!-- Floating Arcade Decorations -->
  <ArcadeDecorations variant="projects" />

  <!-- Featured Projects — horizontal scroll -->
  <div class="projects-hscroll-section relative z-10">
    <div class="projects-hscroll-container">
      <!-- Section Header pinned inside sticky -->
      <div class="projects-hscroll-header">
        <SectionHeader
          title={site.sections.projects.title}
          titleHighlight={site.sections.projects.titleHighlight}
          subtitle={site.sections.projects.subtitle}
          headingId="projects-heading"
        />
      </div>

      <div class="projects-hscroll-track">
        {
          featuredProjects.map((project, index) => (
            <div class="projects-hscroll-panel">
              <div
                class="featured-project flex flex-col lg:flex-row gap-8 items-center"
                data-direction="left"
              >
            {/* Image */}
            <div class="lg:w-1/2 project-image">
              <div class="relative group project-image-wrapper">
                <div class="absolute inset-0 bg-gradient-to-r from-neon-pink/20 to-neon-purple/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
                {project.subProjects && project.subProjects.length > 0 ? (
                  <button
                    type="button"
                    data-modal-trigger={`modal-${index}`}
                    class="relative rounded-2xl overflow-hidden border border-neon-pink/20 group-hover:border-neon-pink/40 transition-colors cursor-pointer w-full"
                  >
                    <img
                      src={project.image}
                      alt={project.title}
                      class="w-full h-auto object-cover"
                      loading="lazy"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-night-900/90 via-night-900/20 to-transparent" />
                  </button>
                ) : project.live ? (
                  <a
                    href={project.live}
                    class="external-link relative rounded-2xl overflow-hidden border border-neon-pink/20 group-hover:border-neon-pink/40 transition-colors cursor-pointer block"
                    data-external-url={project.live}
                  >
                    <img
                      src={project.image}
                      alt={project.title}
                      class="w-full h-auto object-cover"
                      loading="lazy"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-night-900/90 via-night-900/20 to-transparent" />
                  </a>
                ) : (
                  <div class="relative rounded-2xl overflow-hidden border border-neon-pink/20 group-hover:border-neon-pink/40 transition-colors">
                    <img
                      src={project.image}
                      alt={project.title}
                      class="w-full h-auto object-cover"
                      loading="lazy"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-night-900/90 via-night-900/20 to-transparent" />
                  </div>
                )}
              </div>
            </div>

            {/* Content */}
            <div class="lg:w-1/2 project-content">
              {/* Title & Description - slides out first */}
              <div class="project-title-desc">
                <span class="text-neon-pink text-sm font-mono mb-2 block glow-text-pink">

                </span>
                <p class="text-2xl font-bold text-white mb-4">{project.title}</p>
                <div class="glass p-6 mb-6">
                  <p class="text-gray-300">{project.description}</p>
                </div>
              </div>

              {/* Metrics - cascades from behind description */}
              <div class="project-metrics flex flex-wrap gap-3 mb-6">
                {project.metrics.map((metric) => (
                  <span class="flex items-center gap-2 text-sm text-neon-green">
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
                      />
                    </svg>
                    {metric}
                  </span>
                ))}
              </div>

              {/* Tags - cascades after metrics */}
              <div class="project-tags flex flex-wrap gap-2 mb-6">
                {project.tags.map((tag) => (
                  <span class="px-3 py-1 text-sm bg-night-700 text-gray-300 rounded-full">
                    {tag}
                  </span>
                ))}
              </div>

              {/* Links - cascades last */}
              <div class="project-links flex gap-4">
                {project.github && (
                  <a
                    href={project.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="btn btn-ghost"
                    aria-label={`View ${project.title} on GitHub`}
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                    </svg>
                    Code
                  </a>
                )}
                {project.subProjects && project.subProjects.length > 0 ? (
                  <button
                    type="button"
                    class="btn btn-primary"
                    data-modal-trigger={`modal-${index}`}
                    aria-label={`View ${project.title} sites`}
                  >
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"
                      />
                    </svg>
                    View Sites
                  </button>
                ) : project.live && (
                  <a
                    href={project.live}
                    class="external-link btn btn-primary"
                    data-external-url={project.live}
                    aria-label={`Visit ${project.title} live site`}
                  >
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                      />
                    </svg>
                    Live Site
                  </a>
                )}
              </div>
            </div>
              </div>
            </div>
          ))
        }
      </div>{/* end .projects-hscroll-track */}

      {/* Panel indicator dots */}
      <div class="projects-hscroll-indicators">
        {featuredProjects.map((_, i) => (
          <button class={`projects-hscroll-dot${i === 0 ? ' active' : ''}`} data-panel={i} aria-label={`Go to project ${i + 1}`}></button>
        ))}
      </div>
    </div>
  </div>

  <div class="max-w-6xl mx-auto relative z-10 px-4">
    {/* Sub-Projects Modals */}
    {
      featuredProjects.map((project, index) => (
        project.subProjects && project.subProjects.length > 0 && (
          <div
            id={`modal-${index}`}
            class="fixed inset-0 z-[60] hidden items-center justify-center p-4"
            role="dialog"
            aria-modal="true"
            aria-labelledby={`modal-title-${index}`}
          >
            {/* Backdrop */}
            <div class="absolute inset-0 bg-night-900/90 backdrop-blur-sm" data-modal-backdrop />

            {/* Modal Content */}
            <div class="chase-border chase-always modal-container relative w-full max-w-5xl max-h-[90vh] overflow-y-auto rounded-2xl border border-neon-pink/30 bg-night-800/95 p-6 md:p-8 shadow-2xl">
              {/* Close Button */}
              <button
                type="button"
                class="absolute top-4 right-4 w-10 h-10 rounded-full bg-night-700 border border-neon-pink/20 flex items-center justify-center text-gray-400 hover:text-neon-pink hover:border-neon-pink/40 transition-colors"
                data-modal-close
                aria-label="Close modal"
              >
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>

              {/* Modal Header */}
              <h3 id={`modal-title-${index}`} class="text-2xl font-bold text-white mb-2">
                {project.title}
              </h3>
              <p class="text-gray-400 mb-8">Select a project to view</p>

              {/* Sub-Projects Grid - 4 cols desktop, 2 cols tablet, 1 col mobile */}
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                {project.subProjects.map((subProject, subIndex) => (
                  subProject.subProjects && subProject.subProjects.length > 0 ? (
                    <button
                      type="button"
                      data-modal-trigger={`nested-modal-${index}-${subIndex}`}
                      class="chase-border modal-tile group block rounded-xl border border-neon-purple/20 bg-night-700/50 hover:shadow-lg hover:shadow-neon-pink/10 text-left"
                    >
                      {/* Sub-Project Image */}
                      <div class="aspect-video overflow-hidden relative z-10">
                        <img
                          src={subProject.image}
                          alt={subProject.title}
                          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                          loading="lazy"
                        />
                      </div>
                      {/* Sub-Project Content */}
                      <div class="p-4 relative z-10">
                        <p class="font-semibold text-white group-hover:text-neon-pink transition-colors mb-1">
                          {subProject.title}
                        </p>
                        <p class="text-sm text-gray-400 line-clamp-2">
                          {subProject.description}
                        </p>
                        <div class="mt-3 flex items-center gap-1 text-sm text-neon-cyan">
                          <span>View Projects</span>
                          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                          </svg>
                        </div>
                      </div>
                    </button>
                  ) : (
                    <a
                      href={subProject.live}
                      class="chase-border modal-tile external-link group block rounded-xl border border-neon-purple/20 bg-night-700/50 hover:shadow-lg hover:shadow-neon-pink/10"
                      data-external-url={subProject.live}
                    >
                      {/* Sub-Project Image */}
                      <div class="aspect-video overflow-hidden relative z-10">
                        <img
                          src={subProject.image}
                          alt={subProject.title}
                          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                          loading="lazy"
                        />
                      </div>
                      {/* Sub-Project Content */}
                      <div class="p-4 relative z-10">
                        <p class="font-semibold text-white group-hover:text-neon-pink transition-colors mb-1">
                          {subProject.title}
                        </p>
                        <p class="text-sm text-gray-400 line-clamp-2">
                          {subProject.description}
                        </p>
                        <div class="mt-3 flex items-center gap-1 text-sm text-neon-cyan">
                          <span>Visit</span>
                          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                          </svg>
                        </div>
                      </div>
                    </a>
                  )
                ))}
              </div>
            </div>
          </div>
        )
      ))
    }

    {/* Nested Sub-Projects Modals (for Parker.edu etc.) */}
    {
      featuredProjects.map((project, index) => (
        project.subProjects && project.subProjects.map((subProject, subIndex) => (
          subProject.subProjects && subProject.subProjects.length > 0 && (
            <div
              id={`nested-modal-${index}-${subIndex}`}
              class="fixed inset-0 z-[70] hidden items-center justify-center p-4"
              role="dialog"
              aria-modal="true"
              aria-labelledby={`nested-modal-title-${index}-${subIndex}`}
            >
              {/* Backdrop */}
              <div class="absolute inset-0 bg-night-900/95 backdrop-blur-sm" data-modal-backdrop />

              {/* Modal Content */}
              <div class="chase-border chase-always modal-container modal-container-cyan relative w-full max-w-5xl max-h-[90vh] overflow-y-auto rounded-2xl border border-neon-cyan/30 bg-night-800/95 p-6 md:p-8 shadow-2xl">
                {/* Back Button */}
                <button
                  type="button"
                  class="absolute top-4 left-4 w-10 h-10 rounded-full bg-night-700 border border-neon-cyan/20 flex items-center justify-center text-gray-400 hover:text-neon-cyan hover:border-neon-cyan/40 transition-colors"
                  data-back-to-modal={`modal-${index}`}
                  aria-label="Back to previous"
                >
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                  </svg>
                </button>

                {/* Close Button */}
                <button
                  type="button"
                  class="absolute top-4 right-4 w-10 h-10 rounded-full bg-night-700 border border-neon-cyan/20 flex items-center justify-center text-gray-400 hover:text-neon-cyan hover:border-neon-cyan/40 transition-colors"
                  data-modal-close
                  aria-label="Close modal"
                >
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                </button>

                {/* Modal Header */}
                <h3 id={`nested-modal-title-${index}-${subIndex}`} class="text-2xl font-bold text-white mb-2 text-center">
                  {subProject.title}
                </h3>
                <p class="text-gray-400 mb-8 text-center">Select a project to view</p>

                {/* Nested Sub-Projects Grid */}
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                  {subProject.subProjects.map((nestedProject) => (
                    nestedProject.live ? (
                      <a
                        href={nestedProject.live}
                        class="chase-border modal-tile modal-tile-cyan external-link group block rounded-xl border border-neon-cyan/20 bg-night-700/50 hover:shadow-lg hover:shadow-neon-cyan/10"
                        data-external-url={nestedProject.live}
                      >
                        <div class="aspect-video overflow-hidden relative z-10">
                          <img
                            src={nestedProject.image}
                            alt={nestedProject.title}
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                            loading="lazy"
                          />
                        </div>
                        <div class="p-4 relative z-10">
                          <p class="font-semibold text-white group-hover:text-neon-cyan transition-colors mb-1">
                            {nestedProject.title}
                          </p>
                          <p class="text-sm text-gray-400 line-clamp-2">
                            {nestedProject.description}
                          </p>
                          <div class="mt-3 flex items-center gap-1 text-sm text-neon-cyan">
                            <span>Visit</span>
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                            </svg>
                          </div>
                        </div>
                      </a>
                    ) : (
                      <div class="chase-border modal-tile modal-tile-cyan group block rounded-xl border border-neon-cyan/20 bg-night-700/50">
                        <div class="aspect-video overflow-hidden relative z-10">
                          <img
                            src={nestedProject.image}
                            alt={nestedProject.title}
                            class="w-full h-full object-cover"
                            loading="lazy"
                          />
                        </div>
                        <div class="p-4 relative z-10">
                          <p class="font-semibold text-white mb-1">
                            {nestedProject.title}
                          </p>
                          <p class="text-sm text-gray-400 line-clamp-2">
                            {nestedProject.description}
                          </p>
                        </div>
                      </div>
                    )
                  ))}
                </div>
              </div>
            </div>
          )
        ))
      ))
    }

    {/* External Link Confirmation Modal */}
    <div
      id="external-link-modal"
      class="fixed inset-0 z-[80] hidden items-center justify-center p-4"
      role="dialog"
      aria-modal="true"
      aria-labelledby="external-modal-title"
    >
      {/* Backdrop */}
      <div class="absolute inset-0 bg-night-900/95 backdrop-blur-sm" data-external-modal-backdrop />

      {/* Modal Content */}
      <div class="chase-border chase-always modal-container modal-container-warning relative w-full max-w-md rounded-2xl border border-neon-yellow/30 bg-night-800/95 p-6 md:p-8 shadow-2xl text-center">
        {/* Warning Icon */}
        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-neon-yellow/10 border border-neon-yellow/30 flex items-center justify-center">
          <svg class="w-8 h-8 text-neon-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>

        <h3 id="external-modal-title" class="text-xl font-bold text-white mb-2">
          Leaving Portfolio
        </h3>
        <p class="text-gray-400 mb-6">
          You're about to visit an external website. This will open in a new tab.
        </p>
        <p id="external-link-url" class="text-sm text-neon-cyan font-mono mb-6 break-all"></p>

        {/* Buttons */}
        <div class="flex gap-4 justify-center">
          <button
            type="button"
            class="btn btn-ghost"
            data-external-modal-cancel
          >
            Cancel
          </button>
          <button
            type="button"
            class="btn btn-primary"
            data-external-modal-confirm
          >
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            Continue
          </button>
        </div>
      </div>
    </div>

  </div>
</section>

<!-- More Work — own section, 100vh, snaps -->
<section id="more-work" class="more-work-section section section-arcade" aria-labelledby="more-work-heading">
  <div class="more-work-inner max-w-6xl mx-auto relative z-10 px-4">
    <div class="other-projects-section">
      <h3 id="more-work-heading" class="other-projects-title subsection-title text-2xl font-bold text-white text-center mb-8">
        {site.sections.projects.otherTitle} <span class="gradient-text">{site.sections.projects.otherTitleHighlight}</span>
      </h3>

      <div class="other-projects-grid grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          otherProjects.map((project, index) => (
            <div class={`card card-highlighted group other-project-card other-project-card-${index}`}>
              {/* Header */}
              <div class="flex items-start justify-between mb-4">
                <div class="project-icon w-12 h-12 rounded-xl bg-neon-pink/10 border border-neon-pink/20 flex items-center justify-center">
                  <svg
                    class="w-6 h-6 text-neon-pink"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"
                    />
                  </svg>
                </div>
                <div class="flex gap-3">
                  {project.github && (
                    <a
                      href={project.github}
                      class="external-link text-gray-400 hover:text-neon-pink transition-colors"
                      data-external-url={project.github}
                      aria-label={`View ${project.title} on GitHub`}
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                      </svg>
                    </a>
                  )}
                  {project.live && (
                    <a
                      href={project.live}
                      class="external-link text-gray-400 hover:text-neon-yellow transition-colors"
                      data-external-url={project.live}
                      aria-label={`Visit ${project.title}`}
                    >
                      <svg
                        class="w-5 h-5"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                        />
                      </svg>
                    </a>
                  )}
                </div>
              </div>

              {/* Content */}
              <p class="text-lg font-semibold text-white mb-2 group-hover:text-neon-pink transition-colors">
                {project.title}
              </p>
              <p class="text-gray-400 text-sm mb-4">{project.description}</p>

              {/* Tags */}
              <div class="flex flex-wrap gap-2 mt-auto">
                {project.tags.slice(0, 3).map((tag) => (
                  <span class="text-xs text-gray-500">{tag}</span>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<script>
  function initProjectModals() {
    // Open modal on trigger click
    document.querySelectorAll('[data-modal-trigger]').forEach((trigger) => {
      trigger.addEventListener('click', () => {
        const modalId = trigger.getAttribute('data-modal-trigger');
        const modal = document.getElementById(modalId || '');
        if (modal) {
          modal.classList.remove('hidden');
          modal.classList.add('flex');
          document.body.style.overflow = 'hidden';
        }
      });
    });

    // Close modal on close button click
    document.querySelectorAll('[data-modal-close]').forEach((closeBtn) => {
      closeBtn.addEventListener('click', () => {
        const modal = closeBtn.closest('[role="dialog"]');
        if (modal) {
          modal.classList.add('hidden');
          modal.classList.remove('flex');
          document.body.style.overflow = '';
        }
      });
    });

    // Back button handler for nested modals
    document.querySelectorAll('[data-back-to-modal]').forEach((backBtn) => {
      backBtn.addEventListener('click', () => {
        const targetModalId = backBtn.getAttribute('data-back-to-modal');
        const currentModal = backBtn.closest('[role="dialog"]');
        const targetModal = document.getElementById(targetModalId || '');

        if (currentModal && targetModal) {
          // Close current nested modal
          currentModal.classList.add('hidden');
          currentModal.classList.remove('flex');
          // Open parent modal
          targetModal.classList.remove('hidden');
          targetModal.classList.add('flex');
        }
      });
    });

    // Close modal on backdrop click
    document.querySelectorAll('[data-modal-backdrop]').forEach((backdrop) => {
      backdrop.addEventListener('click', () => {
        const modal = backdrop.closest('[role="dialog"]');
        if (modal) {
          modal.classList.add('hidden');
          modal.classList.remove('flex');
          document.body.style.overflow = '';
        }
      });
    });

    // Close modal on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        const openModal = document.querySelector('[role="dialog"]:not(.hidden)');
        if (openModal) {
          openModal.classList.add('hidden');
          openModal.classList.remove('flex');
          document.body.style.overflow = '';
        }
      }
    });
  }

  // External link confirmation modal
  function initExternalLinkModal() {
    const modal = document.getElementById('external-link-modal');
    const urlDisplay = document.getElementById('external-link-url');
    const confirmBtn = document.querySelector('[data-external-modal-confirm]');
    const cancelBtn = document.querySelector('[data-external-modal-cancel]');
    const backdrop = document.querySelector('[data-external-modal-backdrop]');

    let pendingUrl = '';

    function openExternalModal(url: string) {
      pendingUrl = url;
      if (urlDisplay) urlDisplay.textContent = url;
      if (modal) {
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        document.body.style.overflow = 'hidden';
      }
    }

    function closeExternalModal() {
      if (modal) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        document.body.style.overflow = '';
      }
      pendingUrl = '';
    }

    // Intercept external link clicks
    document.querySelectorAll('.external-link, a[data-external-url]').forEach((link) => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const url = link.getAttribute('data-external-url') || link.getAttribute('href');
        if (url && url !== '#') {
          openExternalModal(url);
        }
      });
    });

    // Also intercept btn-primary links that go external (Live Site buttons)
    document.querySelectorAll('a.btn-primary[href^="http"], a.btn-primary[href^="https"]').forEach((link) => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const url = link.getAttribute('href');
        if (url) {
          openExternalModal(url);
        }
      });
    });

    // Confirm button - open in new tab
    confirmBtn?.addEventListener('click', () => {
      if (pendingUrl) {
        window.open(pendingUrl, '_blank', 'noopener,noreferrer');
      }
      closeExternalModal();
    });

    // Cancel button
    cancelBtn?.addEventListener('click', closeExternalModal);

    // Backdrop click
    backdrop?.addEventListener('click', closeExternalModal);

    // Escape key (handled by main modal handler)
  }

  initProjectModals();
  initExternalLinkModal();
  document.addEventListener('astro:after-swap', () => {
    initProjectModals();
    initExternalLinkModal();
  });

  // Project icon flip animation
  import { initIconFlips } from '../../lib/icon-flip';
  import { initSectionParallax } from '../../lib/parallax';
  import { initScrollWave } from '../../lib/scroll-wave';

  let iconCleanup: () => void;
  let waveCleanup: (() => void) | undefined;

  function initProjectIconFlips() {
    iconCleanup?.();
    iconCleanup = initIconFlips({
      selector: '.project-icon',
      randomFlip: true,
      randomFlipDelay: [3000, 7000]
    });
  }

  function initProjects() {
    initProjectIconFlips();
    initSectionParallax('projects');
  }

  initProjects();
  document.addEventListener('astro:after-swap', initProjects);

  // ============================================
  // Featured Projects Horizontal Scroll
  // ============================================
  let projectsHscrollCleanup: (() => void) | undefined;

  // Preload snap sound
  let snapSound: HTMLAudioElement | null = null;
  try {
    snapSound = new Audio('/sounds/menu-back-384929.mp3');
    snapSound.preload = 'auto';
    snapSound.volume = 0.3;
  } catch (_) {}

  let lastSoundTime = 0;
  function playSnapSound() {
    if (!snapSound) return;
    if (document.documentElement.getAttribute('data-sounds') === 'disabled') return;
    const now = Date.now();
    if (now - lastSoundTime < 1000) return;
    lastSoundTime = now;
    snapSound.currentTime = 0;
    snapSound.play().catch(() => {});
  }

  function isMobile(): boolean {
    return false; // scroll panels now work on all screen sizes
  }

  function initProjectsHscroll() {
    const section = document.querySelector('.projects-hscroll-section') as HTMLElement;
    const container = document.querySelector('.projects-hscroll-container') as HTMLElement;
    const track = document.querySelector('.projects-hscroll-track') as HTMLElement;
    const dots = document.querySelectorAll('.projects-hscroll-dot') as NodeListOf<HTMLElement>;

    if (!section || !container || !track) return () => {};

    const panels = track.querySelectorAll('.projects-hscroll-panel') as NodeListOf<HTMLElement>;
    const projects = track.querySelectorAll('.featured-project') as NodeListOf<HTMLElement>;
    const panelCount = panels.length;

    if (panelCount === 0) return () => {};

    const animDisabled = document.documentElement.getAttribute('data-animations') === 'disabled';

    // Show all content on mobile or animations disabled
    if (animDisabled || isMobile()) {
      projects.forEach((p) => {
        p.classList.add('image-in', 'content-in', 'metrics-in', 'tags-in', 'links-in');
      });
      if (isMobile()) {
        section.style.height = '';
        return () => {};
      }
    }

    // Measure nav height
    const nav = document.getElementById('main-nav');
    const navH = nav ? nav.offsetHeight : 60;
    container.style.setProperty('--nav-h', `${navH}px`);

    // Equalize panel heights
    panels.forEach((p) => { p.style.minHeight = ''; });
    // Temporarily show content for measurement
    projects.forEach((p) => {
      p.classList.add('image-in', 'content-in', 'metrics-in', 'tags-in', 'links-in');
    });
    let maxH = 0;
    panels.forEach((p) => {
      if (p.scrollHeight > maxH) maxH = p.scrollHeight;
    });
    panels.forEach((p) => { p.style.minHeight = `${maxH}px`; });
    // Reset if animations enabled
    if (!animDisabled) {
      projects.forEach((p) => {
        p.classList.remove('image-in', 'content-in', 'metrics-in', 'tags-in', 'links-in');
      });
    }

    // Each panel is 100% of container width
    const stepPx = container.offsetWidth;

    // Section height: 1 viewport + (n-1) * 40vh scroll per panel
    const scrollPerPanel = window.innerHeight * 0.4;
    section.style.height = `${window.innerHeight + (panelCount - 1) * scrollPerPanel}px`;

    let ticking = false;
    let snappedPanel = -1;

    // Track active timers so we can clear on reset
    let activeTimers: ReturnType<typeof setTimeout>[] = [];

    function revealPanel(index: number) {
      const project = projects[index];
      if (!project) return;

      project.classList.add('image-in');
      activeTimers.push(setTimeout(() => project.classList.add('content-in'), 200));
      activeTimers.push(setTimeout(() => project.classList.add('metrics-in'), 350));
      activeTimers.push(setTimeout(() => project.classList.add('tags-in'), 500));
      activeTimers.push(setTimeout(() => project.classList.add('links-in'), 650));
    }

    function resetAllPanels() {
      activeTimers.forEach((t) => clearTimeout(t));
      activeTimers = [];
      projects.forEach((p) => {
        p.classList.remove('image-in', 'content-in', 'metrics-in', 'tags-in', 'links-in');
      });
    }

    function updateDots(activeIndex: number) {
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === activeIndex);
      });
    }

    function snapTo(panelIndex: number) {
      const clamped = Math.max(0, Math.min(panelIndex, panelCount - 1));
      if (clamped === snappedPanel) return;
      snappedPanel = clamped;

      playSnapSound();

      // Reset all panels so the incoming one replays its animation fresh
      resetAllPanels();

      const translatePx = clamped * stepPx;
      track.style.transition = 'transform 0.45s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
      track.style.transform = `translateX(-${translatePx}px)`;

      updateDots(clamped);
      revealPanel(clamped);
    }

    function onScroll() {
      if (ticking) return;
      ticking = true;

      requestAnimationFrame(() => {
        const sectionRect = section.getBoundingClientRect();
        const sectionTop = -sectionRect.top;
        const totalScrollable = section.offsetHeight - window.innerHeight;

        if (sectionTop < 0) {
          if (snappedPanel !== 0) {
            snappedPanel = 0;
            track.style.transition = 'transform 0.45s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
            track.style.transform = 'translateX(0)';
            updateDots(0);
          }

          if (sectionRect.top > window.innerHeight * 0.5) {
            resetAllPanels();
          } else {
            revealPanel(0);
          }
        } else if (sectionTop >= totalScrollable) {
          snapTo(panelCount - 1);
        } else {
          const progress = sectionTop / totalScrollable;
          const targetPanel = Math.round(progress * (panelCount - 1));
          snapTo(targetPanel);
        }

        ticking = false;
      });
    }

    // Dot click handlers
    dots.forEach((dot) => {
      dot.addEventListener('click', () => {
        const panelIndex = parseInt(dot.dataset.panel || '0', 10);
        const totalScrollable = section.offsetHeight - window.innerHeight;
        const targetScroll = section.offsetTop + (panelIndex / (panelCount - 1)) * totalScrollable;
        window.scrollTo({ top: targetScroll, behavior: 'smooth' });
      });
    });

    // Resize: full reinit
    let resizeTimer: ReturnType<typeof setTimeout>;
    function onResize() {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => {
        projectsHscrollCleanup?.();
        projectsHscrollCleanup = initProjectsHscroll();
      }, 200);
    }

    window.addEventListener('scroll', onScroll, { passive: true });
    window.addEventListener('resize', onResize, { passive: true });
    onScroll();

    return () => {
      window.removeEventListener('scroll', onScroll);
      window.removeEventListener('resize', onResize);
      clearTimeout(resizeTimer);
    };
  }

  function initProjectSlides() {
    projectsHscrollCleanup?.();
    projectsHscrollCleanup = initProjectsHscroll();
  }

  initProjectSlides();
  document.addEventListener('astro:after-swap', initProjectSlides);

  // Re-init when animations toggle changes
  window.addEventListener('animations-change', () => {
    projectsHscrollCleanup?.();
    projectsHscrollCleanup = initProjectsHscroll();
    otherProjectsCleanup?.();
    otherProjectsCleanup = initOtherProjectsAnimation();
  });

  // Other Projects animation (like GitHub repos)
  let otherProjectsCleanup: (() => void) | undefined;

  function initOtherProjectsAnimation() {
    const section = document.querySelector('.other-projects-section') as HTMLElement;
    const title = document.querySelector('.other-projects-title') as HTMLElement;
    const cards = document.querySelectorAll('.other-project-card') as NodeListOf<HTMLElement>;

    if (!section || !title) return () => {};

    // Skip if animations disabled
    if (document.documentElement.getAttribute('data-animations') === 'disabled') {
      title.classList.add('visible');
      cards.forEach((card) => card.classList.add('visible'));
      return () => {};
    }

    let ticking = false;

    const checkOtherProjects = () => {
      const viewportHeight = window.innerHeight;
      const titleTrigger = viewportHeight * 0.7;
      const cardsTrigger = viewportHeight * 0.5;
      const exitPoint = viewportHeight * 0.8;

      const sectionRect = section.getBoundingClientRect();

      // Title fades in first
      if (sectionRect.top < titleTrigger) {
        title.classList.add('visible');
      }

      // Cards fly out one by one
      if (sectionRect.top < cardsTrigger) {
        cards.forEach((card, index) => {
          if (!card.classList.contains('visible')) {
            setTimeout(() => {
              card.classList.add('visible');
            }, index * 100);
          }
        });
      }

      // Reset when scrolling up
      if (sectionRect.top > exitPoint) {
        title.classList.remove('visible');
        cards.forEach((card) => card.classList.remove('visible'));
      }

      ticking = false;
    };

    const handleScroll = () => {
      if (!ticking) {
        requestAnimationFrame(checkOtherProjects);
        ticking = true;
      }
    };

    window.addEventListener('scroll', handleScroll, { passive: true });
    checkOtherProjects();

    return () => {
      window.removeEventListener('scroll', handleScroll);
    };
  }

  function initOtherProjects() {
    otherProjectsCleanup?.();
    waveCleanup?.();
    otherProjectsCleanup = initOtherProjectsAnimation();
    waveCleanup = initScrollWave({
      selector: '.other-projects-title',
      waveStart: 0.75,
      waveEnd: 0.35
    });
  }

  initOtherProjects();
  document.addEventListener('astro:after-swap', initOtherProjects);

  window.addEventListener('animations-change', () => {
    otherProjectsCleanup?.();
    waveCleanup?.();
    otherProjectsCleanup = initOtherProjectsAnimation();
    waveCleanup = initScrollWave({
      selector: '.other-projects-title',
      waveStart: 0.75,
      waveEnd: 0.35
    });
  });
</script>

