---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  image?: string;
  technologies: string[];
  liveUrl?: string;
  githubUrl?: string;
  publishedAt: Date;
  problem?: string;
  solution?: string;
  results?: { metric: string; value: string }[];
}

const {
  title,
  description,
  image,
  technologies,
  liveUrl,
  githubUrl,
  publishedAt,
  problem,
  solution,
  results,
} = Astro.props;

const formattedDate = publishedAt.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={`${title} | Leo Ashcraft`} description={description}>
  <article class="py-20 px-4">
    <div class="max-w-4xl mx-auto">
      <!-- Back Link -->
      <a
        href="/projects"
        class="inline-flex items-center gap-2 text-gray-400 hover:text-neon-cyan transition-colors mb-8"
      >
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Projects
      </a>

      <!-- Header -->
      <header class="mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">{title}</h1>
        <p class="text-xl text-gray-400 mb-6">{description}</p>

        <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500">
          <time datetime={publishedAt.toISOString()}>{formattedDate}</time>
          {liveUrl && (
            <a
              href={liveUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1 text-neon-cyan hover:underline"
            >
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              Live Site
            </a>
          )}
          {githubUrl && (
            <a
              href={githubUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1 text-gray-400 hover:text-white transition-colors"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              Source Code
            </a>
          )}
        </div>
      </header>

      <!-- Featured Image -->
      {image && (
        <div class="mb-12 rounded-xl overflow-hidden">
          <img
            src={image}
            alt={title}
            class="w-full h-auto"
            loading="lazy"
          />
        </div>
      )}

      <!-- Technologies -->
      <div class="flex flex-wrap gap-2 mb-12">
        {technologies.map((tech) => (
          <span class="px-3 py-1 text-sm rounded-full bg-night-700 text-neon-cyan border border-neon-cyan/20">
            {tech}
          </span>
        ))}
      </div>

      <!-- Problem/Solution/Results Cards -->
      {(problem || solution || results) && (
        <div class="grid md:grid-cols-3 gap-6 mb-12">
          {problem && (
            <div class="card">
              <h3 class="text-lg font-semibold text-white mb-2 flex items-center gap-2">
                <svg class="w-5 h-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                Problem
              </h3>
              <p class="text-gray-400 text-sm">{problem}</p>
            </div>
          )}
          {solution && (
            <div class="card">
              <h3 class="text-lg font-semibold text-white mb-2 flex items-center gap-2">
                <svg class="w-5 h-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Solution
              </h3>
              <p class="text-gray-400 text-sm">{solution}</p>
            </div>
          )}
          {results && results.length > 0 && (
            <div class="card">
              <h3 class="text-lg font-semibold text-white mb-3 flex items-center gap-2">
                <svg class="w-5 h-5 text-neon-cyan" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
                Results
              </h3>
              <ul class="space-y-2">
                {results.map((result) => (
                  <li class="flex justify-between text-sm">
                    <span class="text-gray-400">{result.metric}</span>
                    <span class="text-neon-cyan font-semibold">{result.value}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>
      )}

      <!-- Content -->
      <div class="prose">
        <slot />
      </div>

      <!-- Navigation -->
      <nav class="mt-16 pt-8 border-t border-night-700">
        <a
          href="/projects"
          class="inline-flex items-center gap-2 text-gray-400 hover:text-neon-cyan transition-colors"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          View All Projects
        </a>
      </nav>
    </div>
  </article>
</BaseLayout>
