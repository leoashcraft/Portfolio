---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort(
  (a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime()
);

// Get unique tags
const allTags = [...new Set(posts.flatMap((post) => post.data.tags))].sort();
---

<BaseLayout
  title="Blog | Leo Ashcraft"
  description="Thoughts on software development, web technologies, and building better applications."
>
  <section class="py-20 px-4">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          Blog & <span class="gradient-text">Writing</span>
        </h1>
        <p class="text-xl text-gray-400 max-w-2xl mx-auto">
          Thoughts on software development, web technologies, and lessons learned
          from building applications.
        </p>
      </div>

      <!-- Tags Filter -->
      {allTags.length > 0 && (
        <div class="flex flex-wrap justify-center gap-2 mb-12">
          {allTags.map((tag) => (
            <span class="px-3 py-1 text-sm rounded-full bg-night-700 text-gray-400 hover:text-neon-cyan hover:bg-night-600 transition-colors cursor-pointer">
              #{tag}
            </span>
          ))}
        </div>
      )}

      <!-- Posts List -->
      <div class="space-y-8">
        {sortedPosts.map((post, index) => (
          <article class={`card card-highlighted group ${index === 0 ? 'md:flex md:gap-8' : ''}`}>
            {post.data.image && index === 0 && (
              <div class="md:w-1/3 aspect-video md:aspect-auto overflow-hidden rounded-lg mb-4 md:mb-0 md:-ml-6 md:-my-6 bg-night-800">
                <img
                  src={post.data.image}
                  alt={post.data.title}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>
            )}
            <div class={index === 0 ? 'md:flex-1' : ''}>
              <div class="flex flex-wrap items-center gap-3 mb-3">
                <time
                  datetime={post.data.publishedAt.toISOString()}
                  class="text-sm text-gray-500"
                >
                  {post.data.publishedAt.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
                {post.data.readingTime && (
                  <span class="text-sm text-gray-600">
                    · {post.data.readingTime} min read
                  </span>
                )}
              </div>
              <a href={`/blog/${post.slug}`} class="block group">
                <h2 class={`font-bold text-white group-hover:text-neon-cyan transition-colors mb-2 ${index === 0 ? 'text-2xl' : 'text-xl'}`}>
                  {post.data.title}
                </h2>
              </a>
              <p class="text-gray-400 mb-4 line-clamp-2">
                {post.data.description}
              </p>
              <div class="flex flex-wrap items-center gap-2">
                {post.data.tags.slice(0, 3).map((tag) => (
                  <span class="px-2 py-0.5 text-xs rounded-full bg-night-700 text-gray-500">
                    #{tag}
                  </span>
                ))}
                <a
                  href={`/blog/${post.slug}`}
                  class="ml-auto text-sm text-neon-cyan hover:underline"
                >
                  Read more →
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>

      {sortedPosts.length === 0 && (
        <div class="text-center py-20">
          <p class="text-gray-400 text-lg">No posts yet. Check back soon!</p>
        </div>
      )}

      <!-- Back to Home -->
      <div class="text-center mt-16">
        <a
          href="/"
          class="inline-flex items-center gap-2 text-gray-400 hover:text-neon-cyan transition-colors"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Home
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
