---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/hero/HeroSection.astro';
import AboutSection from '../components/sections/AboutSection.astro';
import EducationSection from '../components/sections/EducationSection.astro';
import ProjectsSection from '../components/sections/ProjectsSection.astro';
import ExperienceSection from '../components/sections/ExperienceSection.astro';
import GitHubSection from '../components/github/GitHubSection.astro';
import ContactSection from '../components/sections/ContactSection.astro';
import InteractiveTerminal from '../components/terminal/InteractiveTerminal';
import { site } from '../data/site';
---

<BaseLayout snapScroll>
  <!-- Hero Section with 3D Background -->
  <HeroSection />

  {/* Interactive Terminal Section - COMMENTED OUT
  <section id="terminal" class="section px-4 max-w-4xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="section-title gradient-text">Try the Terminal</h2>
      <p class="section-subtitle mx-auto">
        Type <code class="bg-night-700 px-2 py-1 rounded text-neon-cyan">help</code> to see available
        commands
      </p>
    </div>
    <InteractiveTerminal client:only="react" />
  </section>
  */}

  <!-- About Section -->
  <AboutSection />

  <!-- Education Section -->
  <EducationSection />

  <!-- Projects Section -->
  <ProjectsSection />

  <!-- Experience Section -->
  <ExperienceSection />

  <!-- GitHub Activity Section -->
  <GitHubSection />

  <!-- Contact Section -->
  <ContactSection />

  <!-- Disclaimer â€” visually part of contact area, outside the section -->
  <div class="contact-disclaimer-strip">
    <p class="text-sm text-gray-500 text-center px-4">
      {site.footer.disclaimer}
    </p>
  </div>
</BaseLayout>

<style>
  .contact-disclaimer-strip {
    padding: 2rem 0 3rem;
    position: relative;
    background:
      linear-gradient(180deg, rgba(10, 0, 21, 0.5) 0%, rgba(26, 10, 42, 0.3) 50%, rgba(10, 0, 21, 0.5) 100%),
      radial-gradient(ellipse at 30% 70%, rgba(0, 255, 0, 0.05) 0%, transparent 40%),
      radial-gradient(ellipse at 70% 30%, rgba(255, 255, 0, 0.05) 0%, transparent 40%);
  }
</style>
