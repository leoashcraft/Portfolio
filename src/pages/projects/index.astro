---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const projects = await getCollection('projects');
const sortedProjects = projects.sort(
  (a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime()
);

const featuredProjects = sortedProjects.filter((p) => p.data.featured);
const otherProjects = sortedProjects.filter((p) => !p.data.featured);

const categoryColors: Record<string, string> = {
  web: 'bg-blue-500/20 text-blue-400',
  mobile: 'bg-green-500/20 text-green-400',
  api: 'bg-purple-500/20 text-purple-400',
  tool: 'bg-orange-500/20 text-orange-400',
  other: 'bg-gray-500/20 text-gray-400',
};
---

<BaseLayout
  title="Projects | Leo Ashcraft"
  description="Featured projects and case studies from my work as a full-stack developer."
>
  <section class="py-20 px-4">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          Featured <span class="gradient-text">Projects</span>
        </h1>
        <p class="text-xl text-gray-400 max-w-2xl mx-auto">
          A collection of projects showcasing my expertise in full-stack development,
          API integrations, and cloud solutions.
        </p>
      </div>

      <!-- Featured Projects -->
      {featuredProjects.length > 0 && (
        <div class="mb-16">
          <h2 class="text-xl font-semibold text-white mb-6 flex items-center gap-2">
            <svg class="w-5 h-5 text-neon-cyan" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"/>
            </svg>
            Featured Work
          </h2>
          <div class="grid md:grid-cols-2 gap-8">
            {featuredProjects.map((project) => (
              <a
                href={`/projects/${project.slug}`}
                class="card card-highlighted group block overflow-hidden"
              >
                {project.data.image && (
                  <div class="aspect-video overflow-hidden rounded-lg mb-4 -mx-6 -mt-6 bg-night-800">
                    <img
                      src={project.data.image}
                      alt={project.data.title}
                      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="flex items-center gap-2 mb-3">
                  <span class={`px-2 py-0.5 text-xs rounded-full ${categoryColors[project.data.category]}`}>
                    {project.data.category}
                  </span>
                  <span class="text-xs text-gray-500">
                    {project.data.publishedAt.toLocaleDateString('en-US', { year: 'numeric', month: 'short' })}
                  </span>
                </div>
                <h3 class="text-xl font-bold text-white group-hover:text-neon-cyan transition-colors mb-2">
                  {project.data.title}
                </h3>
                <p class="text-gray-400 text-sm mb-4 line-clamp-2">
                  {project.data.description}
                </p>
                <div class="flex flex-wrap gap-2">
                  {project.data.technologies.slice(0, 4).map((tech) => (
                    <span class="px-2 py-1 text-xs rounded bg-night-700 text-gray-400">
                      {tech}
                    </span>
                  ))}
                  {project.data.technologies.length > 4 && (
                    <span class="px-2 py-1 text-xs rounded bg-night-700 text-gray-500">
                      +{project.data.technologies.length - 4}
                    </span>
                  )}
                </div>
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- Other Projects -->
      {otherProjects.length > 0 && (
        <div>
          <h2 class="text-xl font-semibold text-white mb-6">More Projects</h2>
          <div class="grid md:grid-cols-3 gap-6">
            {otherProjects.map((project) => (
              <a
                href={`/projects/${project.slug}`}
                class="card group block"
              >
                <div class="flex items-center gap-2 mb-3">
                  <span class={`px-2 py-0.5 text-xs rounded-full ${categoryColors[project.data.category]}`}>
                    {project.data.category}
                  </span>
                </div>
                <h3 class="text-lg font-bold text-white group-hover:text-neon-cyan transition-colors mb-2">
                  {project.data.title}
                </h3>
                <p class="text-gray-400 text-sm line-clamp-2">
                  {project.data.description}
                </p>
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- Back to Home -->
      <div class="text-center mt-16">
        <a
          href="/#projects"
          class="inline-flex items-center gap-2 text-gray-400 hover:text-neon-cyan transition-colors"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Home
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
