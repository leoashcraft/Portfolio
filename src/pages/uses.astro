            <a href="https://uses.tech" class="external-link hover:text-neon-pink transition-colors" data-external-url="https://uses.tech">What is a uses page?</a>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- External Link Modal -->
  <ExternalLinkModal />
</BaseLayout>

<style>
  .uses-section {
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 0, 255, 0.1);
    border-radius: 0.75rem;
    transition: border-color 0.3s ease, background-color 0.3s ease;
  }

  .uses-section:hover {
    border-color: rgba(255, 0, 255, 0.3);
    background: rgba(255, 255, 255, 0.04);
  }

  /* Cascade animation on page load */
  .uses-content .uses-section {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.5s ease-out forwards;
  }

  .uses-content .uses-section:nth-child(1) { animation-delay: 0.1s; }
  .uses-content .uses-section:nth-child(2) { animation-delay: 0.2s; }
  .uses-content .uses-section:nth-child(3) { animation-delay: 0.3s; }
  .uses-content .uses-section:nth-child(4) { animation-delay: 0.4s; }
  .uses-content .uses-section:nth-child(5) { animation-delay: 0.5s; }
  .uses-content .uses-section:nth-child(6) { animation-delay: 0.6s; }
  .uses-content .uses-section:nth-child(7) { animation-delay: 0.7s; }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Disable animations when preference set */
  [data-animations="disabled"] .uses-content .uses-section {
    opacity: 1 !important;
    transform: none !important;
    animation: none !important;
  }

  /* High contrast adjustments */
  [data-theme="high-contrast"] .uses-section {
    border-color: rgba(255, 255, 255, 0.3);
  }

  [data-theme="high-contrast"] .uses-section:hover {
    border-color: rgba(255, 255, 255, 0.5);
  }

  [data-theme="high-contrast-light"] .uses-section {
    border-color: rgba(0, 0, 0, 0.2);
    background: rgba(0, 0, 0, 0.02);
  }

  [data-theme="high-contrast-light"] .uses-section:hover {
    border-color: rgba(0, 0, 0, 0.4);
  }

  [data-theme="high-contrast"] .border-neon-pink\/20 {
    border-color: rgba(255, 255, 255, 0.2) !important;
  }

  [data-theme="high-contrast-light"] .border-neon-pink\/20 {
    border-color: rgba(0, 0, 0, 0.2) !important;
  }
</style>
